mixin officialInfo()
  .official-info-container 
    .official-info-content(class=isSem==="2"?"sem-2":"")
      .left 
        if isSem !== "2"
          a.logo-a(href=nav[0].content)
            img.logo(src=company.logo || defaultLogo, alt=companyName)
          .line 
          .text 
            .title #{companyName}
            if shop.navInfo.slogan
              .subtitle #{shop.navInfo.slogan} 
      .right 
        block official-info-phone
          include ./official-info-phone.pug
          +officialInfoPhone()
