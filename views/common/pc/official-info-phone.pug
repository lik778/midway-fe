mixin createPhoneNum(phone)
  if phone&&phone.length>0
    - const notMobile = phone.startsWith('0') || phone.indexOf('-') !== -1
    if notMobile
      span.num #{ phone }
    else 
      span.num #{phone.slice(0,3)}
      span.line
      span.num #{phone.slice(3,7)}
      span.line
      span.num #{phone.slice(7)}
    
