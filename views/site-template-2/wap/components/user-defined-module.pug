mixin user-defined-module(pageType,userDefinedModuleList)
  if userDefinedModuleList
    .user-defined-module
      h2.block-title #{ userDefinedModuleList.title }
        span
        span
      - const userDefinedList = userDefinedModuleList.module
      - const isOdd = userDefinedList.length%2 === 0 ? false : true
      .user-defined-list
        each item,index in userDefinedList
          if index < 9
            - var number = '0' + ( index+1 )
          else
            - var number = index + 1
          .user-defined-item
            span.number #{ number }
            span.title #{ item.title }
            .desc.only-fiveline #{ item.desc }
        if isOdd
          if pageType === 'about'
            .user-defined-item
          else if pageType === 'home'
            .user-defined-item
              a(href="/about" || "#") 查看更多详情
