mixin company-info-home(type)
  .company-info
    .info
      img.info-logo(src=company.logo, alt="logo")
      .info-text
        h3.info-name #{ companyName }
        .info-tag-list
          if type
            each item in type
              p.info-tag= item
          else 
            .info-tag 百姓认证
            .info-tag 实力商家
            .info-tag 品质保障
            .info-tag 贴心服务
    .desc
      p.desc-text !{ company.about.replace(/\n/g, '<br/>') || '暂时还未上传公司简介哦...' }
      img.top-left(src="//file.baixing.net/202112/bfb4da9e9ae404d53f30b32d2daa19f7.png", alt="")
      img.bottom-right(src="//file.baixing.net/202112/5f1355b78aadea0b24a3bbfe99be8de2.png", alt="")
      .action-btn-box
        .action-btn.hide 展开


