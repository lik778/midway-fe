mixin mediaShow()
	- const { headImg, name, price, contentImg, videoUrl,params } = renderData.productInfo;
	- const { address,name: compayname } = renderData.basic.company;
	- const defaultImg = 'http://img6.baixing.net/e692f8b6c28e085c29d30803a43ef752.png_sv1';
	.media-show-container
		.media-show-left
			.left-headImg
				if headImg
					if videoUrl
						.video-con
							.video-wrapper
								video(src=videoUrl, loop, preload, controls)
							.video-cover(id="cover")
								img(src=headImg, alt="logo")
					else
						img(src=headImg, alt="logo")
				else
					img(src=defaultImg, alt="logo")
			.left-contentImg
				.swiper-container
					.swiper-wrapper
						if headImg
							.swiper-slide
								img(src=headImg data-video= videoUrl?"videoUrl":'')
						else
							img(src=defaultImg, alt="logo")
						if contentImg && contentImg.length > 0
							each val in contentImg
								.swiper-slide
									img(src=val, alt="logo")
					.swiper-button-next
					.swiper-button-prev
		.media-show-middle
			.detail-title #{name}
			.detail-price 价格
				span(class="prices") #{price}/台
			.detail-setting 
				.setting-title 产品参数
				.detail-product 
					ul
						if params && params.length > 0
							each value in params
								li 
									span(class="setting-key") #{value.key}
									span(class="setting-value") #{value.value}
			.detail-contact
				include ../../../../common/pc/official-400-btn
				+official400Btn({backgroundColor:'#ED4646',borderColor:'#ED4646',phone:phone.content,naviconw:'20px',naviconh: '20px',naviconm: '8px',navRadius: '4px',navMarginTop: '0',BtnHeight:'40px',BtnWidth:'140px'})
				if kf53StyleUrl && kf53StyleUrl.length > 0
					a.online-btn(href=kf53StyleUrl)
						img(src="//file.baixing.net/202102/9e46f359876a9b5a1f997d3ab8aae438.png", alt="icon")
						span 在线咨询
		include ../common/company-record
		+companyRecord()