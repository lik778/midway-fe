.about-us-bgc
  .about-us-content
    .content-right
      .content-right-title
        .right-title-left
          img(src=company.logo || defaultLogo)
          p.left-title #{ companyName }
        .right-title-right
          - var tag = ['实力商家','诚信认证','品质保障']
          each item in tag
            p.tag= item
      .content-right-body(data-d=company.about)
        - aboutText = company.about?company.about.replace(/\r|\n|(<br(\s){0,}(\/)?>)/g, '').slice(0,220):'暂时还未上传公司简介哦...'
        .body-content
          | !{ aboutText.length === 220?aboutText+'...':aboutText }
          if aboutText.length === 220
            a.view-detail(href=aboutLink) 查看详情
      .content-right-bottom
        .bottom-left
          img(src="//file.baixing.net/202108/e9cd4572f5363e55005f0e8616be31c3.png")
          .phone
            .service-hot 服务热线
            p.phoneNumber-slice.active #{ phone.content.slice(0,3)+'****'+phone.content.slice(7) }
            p.phoneNumber-full.none #{ phone.content }
        .bottom-right 查看完整电话
    .content-left
      - const videoUrl = company.videoUrl
      - const videoCover = company.videoCover
      if videoUrl
        .video-con
          .video-wrapper
            video(src=videoUrl, loop, preload, controls)
          .video-cover
            img.picture(src=videoCover)
      else
        - Src = renderData.src
        - var conpany = Src || '//file.baixing.net/202108/cf64fc96ae23bee3384871111292cdc1.png'
        - var url = /\.(png|jpg|gif|jpeg|webp)$/
        img.audio(src="//file.baixing.net/202108/cf64fc96ae23bee3384871111292cdc1.png")
