.banner-content
  - bg = renderData.banner&&renderData.banner.length>0?renderData.banner[0].displayImgUrl:"//file.baixing.net/202103/a6354faab0bc153c2cfe6e30c64c6463.png"
  .bg-blur(style="background: url("+bg+") no-repeat center center/100% 100%")
  - const bannerList= renderData.productList.result
  #banner-container
    .swiper-container
      .swiper-wrapper
        if bannerList && bannerList.length > 0
          if bannerList.length == 1
            a.swiper-slide(href=bannerList[0].urlSuffix)
              img(src=bannerList[0].headImg)
              p.only-oneline #{ bannerList[0].name }
            .swiper-slide
              img(src=defaultImg)
              p.only-oneline &nbsp;&nbsp;
          else
            each item in bannerList.slice(0,5)
              a.swiper-slide(href=item.urlSuffix)
                img(src=item.headImg || defaultImg)
                p.only-oneline #{ item.name }
        else
          .swiper-slide
            img(src=defaultImg)
            p.only-oneline &nbsp;&nbsp;
          .swiper-slide
            img(src=defaultImg)
            p.only-oneline &nbsp;&nbsp;
    .swiper-pagination
    .swiper-button-next
    .swiper-button-prev


