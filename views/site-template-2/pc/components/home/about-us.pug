.about-us-bgc
	.about-us-text
		.top.clearfix
			img(src=company.logo || "//file.baixing.net/201709/4916aa54f4b4c69b4c01591fe6a87046.png", alt="企业头像")
			h3 #{ companyName }
		.center.clearfix
			.center-left
				p 公司简介
				span - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
				.intro
					| !{ company.about.replace(/\n/g, '<br/>') || '暂时还未上传公司简介哦...' }
			.center-right
				p 工商保障
				span - - - - - - - - - - - - - - - - - - - - - - - - -
				.certification-icon
					img.img1(src="//file.baixing.net/202102/b0e500e6cfa746ab5bd4980460d5dfb7.png", alt="icon")
					.tag1 实力商家
					img.img2(src="//file.baixing.net/202102/040014dd6a47c01a5ec225974f3347ae.png", alt="icon")
					.tag2 百姓认证
				dl
					dt 所在地区
					dd #{ company.address }
				dl
					dt 商家称呼
					dd #{ person.name }
		//-这里要跳转到关于我们路由
		a(href="/about") 查看全部



