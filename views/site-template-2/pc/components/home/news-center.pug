.new-center.clearfix
	mixin news-box(title,newsList)
		.news-box
			.title
				.line
				h3 #{ title }
				a(href= newsLink)
					img(src="//file.baixing.net/202102/07403ddfb02bc55c442329926b7e0c2f.png", alt="更多")
				//-这里需要点击跳转
			.content
				if newsList && newsList.length > 0
					each item in newsList.length > 3 ? newsList.slice(0, 3) : newsList
						//-这里需要后端给文章的图片和内容
						a(href=item.urlSuffix)
							img(src=defaultImg, alt="资讯图片")
							.item-card
								.item-title #{ item.name }
								.item-content.
									#{ item.limitText }

	- articleList =  renderData.articleList.result
	+news-box('新闻资讯', articleList)
	//-这里需要推荐接口
	- const { articleRecommend } = renderData
	+news-box('推荐文章', articleRecommend)


