section.news-detail__section
  .news-detail__subtitle 留言咨询
  .news-detail__contact-us
    .contact-form
      include ../../../../common/pc/contact-form.pug
      +ContactForm('about')
    if isSem !== "1"
      .company-info
        .info-label 公司信息
        .info-item
          span 联系人
          span #{ contactName.content }
        .info-item
          span 联系电话
          span #{ phone.content }
        if phone2.content
          .info-item
            span 联系电话2
            span #{ phone2.content }
        .info-item
          span 微信号码
          span #{ weChat.content || "暂未添加微信号"}
        if qq && qq.length > 0
          .info-item
            span QQ号码
            span #{ qq[0].content }
        .info-item
          span 公司地址
          span #{ company.address || "暂未添加公司地址"}