extends ../layout

block styles
    :combine(fileName="site-template-2-home-pc.css")

//-使用了统一的header和nav
block content
    include ../components/home/swiper.pug

    .container
        //-自定义模块数据
        - const { autoConfig } = renderData
        //-自定义模块2（即之前的自身优势模块）
        if autoConfig&&autoConfig[1]&&autoConfig[1].show
            include ../components/home/self-advantage.pug
            .block-title
                //- img(src="//file.baixing.net/202102/4f9c3d49ee8febc8c9a4ae028adf0edf.png", alt="关于我们")
                .point 
                    .littlePoint 
                    .largePoint
                .h2 #{autoConfig[1].mainModuleTitle||'服务资质'}
                .point 
                    .largePoint
                    .littlePoint
            - defaultSelfAdvantage = [{title:'口碑载道',content:'重视信誉和口碑，客户忠实度高',urlImg:'//file.baixing.net/202110/9851dfe60a5df417b85788ba393460e7.png'},{title:'资质正规',content:'相关资质均有工商备案，资质可查，公司正规',urlImg:'//file.baixing.net/202110/a86515893a4e2bf9d2dda1dd51d94d1a.png'},{title:'贴心服务',content:'全方位的售前售后服务，提高客户满意度',urlImg:'//file.baixing.net/202110/43373c5e79d64d90db73dff93ac82721.png'},{title:'售后保障',content:'完善的售后服务体系和严格的管理制度，客户至上',urlImg:'//file.baixing.net/202110/b8f7486b576631f5d13d9f3ec7f5b1b1.png'}]
           
            - selfAdvantage = autoConfig[1].subModuleBos||defaultSelfAdvantage
            +self-advantage(selfAdvantage)

        - const { productList: hotProductList, name } = renderData.productRecommend
        if hotProductList && hotProductList.length>0
            .block-title
                .point 
                    .littlePoint 
                    .largePoint
                .h2 #{ name || '热门产品'}
                .point 
                    .largePoint 
                    .littlePoint
            include ../components/home/product-list.pug
            +product-list('hot', hotProductList)

        if isSem !== "2"&&isSem !== "1"
            - const { name: aboutUsTitle, tags, media, videoUrl } = renderData.about||renderData.basic.aboutModule || {}
            .block-title
                //- img(src="//file.baixing.net/202102/4f9c3d49ee8febc8c9a4ae028adf0edf.png", alt="关于我们")
                .point 
                    .littlePoint
                    .largePoint
                .h2 #{ aboutUsTitle || '关于我们'}
                .point 
                    .largePoint
                    .littlePoint
            include ../components/home/about-us.pug
            +about-Us-New(tags,media,videoUrl)

        //-自定义模块1（即之前的企业优势模块）
        if autoConfig && autoConfig[0] &&autoConfig[0].show
            include ../components/home/user-defined-module.pug
            +user-defined-module(autoConfig[0]) 

        //- 变量名 "productLists" 会报一个编译时错误，很奇怪
        //- 暂时先换个名字
        - const shopProductLists = renderData.productList.result
        if shopProductLists && shopProductLists.length>0
            .block-title
                //- img(src="//file.baixing.net/202102/e43385d2ad011934a51c42e92a5b7495.png",style="width:283px",alt="产品分类")
                .point 
                    .littlePoint
                    .largePoint
                .h2 产品分类
                .point
                    .largePoint
                    .littlePoint
            .product-catogeries-list
              include ../components/home/product-catogeries.pug 
              include ../components/home/product-list-new.pug
              +product-list('nothot', shopProductLists)

        - const { name:articleListName,articleList:{result:articleList,totalPage} } = renderData.articleList
        include ../components/news/news-list.pug
        if articleList && articleList.length >0
            .block-title
                //- img(src="//file.baixing.net/202102/e1a85f0fd13a3ecea1e1e5f541fde234.png", alt="新闻中心")
                .point 
                    .littlePoint
                    .largePoint
                .h2 #{articleListName}
                .point
                    .largePoint
                    .littlePoint
            include ../components/home/news-list.pug
            +news-list(articleList)
        .block-title
            //- img(src="//file.baixing.net/202102/4be12cae4c491b647a8a2f69eafab548.png",alt="关于我们")
            .point
                .littlePoint
                .largePoint
            .h2 联系我们
            .point
                .largePoint
                .littlePoint
        include ../components/home/contact-us.pug
        //- 用于sem禁止外跳
        include ../../../common/pc/contact-form-sem.pug
        +contactFormSem('#FF2D38')
        
block scripts
    :combine(fileName="site-template-2-home-pc.js")
block append scripts
    script.
        window.extraContactFormData = { position: 1 };
        window.trackSrc = 'home';
