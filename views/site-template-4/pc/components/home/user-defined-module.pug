mixin user-defined-module(configItem)
  - const defaultImg = ['//file.baixing.net/202205/b70356ca83921e71645a44b227926422.png','//file.baixing.net/202205/d20ef91c6bb3ebd1f14a4e1e87d6a81e.png','//file.baixing.net/202205/b70356ca83921e71645a44b227926422.png','//file.baixing.net/202107/4c4c8531457a49f12b432243a20d6fce.png','//file.baixing.net/202107/ed8b66237a86e68c23f369854fe6fcc0.png','//file.baixing.net/202107/eabfa36d86e81cd4eb1031f3ace065a6.png','//file.baixing.net/202107/7665f5e7a4f21c9d1e864408b3ede10a.png','//file.baixing.net/202107/4a17dbc06030214723ec295899c63d65.png','//file.baixing.net/202107/eb3969456c6b4995d648a175a1a091a2.png','//file.baixing.net/202107/9250dd40e68112fbc54ebaef9c8006ff.png']
  .block-title
    .h2 #{ configItem.mainModuleTitle }
    .point
      .tipMiddle(style=`${themTipColor}`)
  - let { subModuleBos } = configItem
  .user-defined-list  
    each item, index in subModuleBos
      .user-defined-item
        if index % 2 !== 0
          .user-defined-item-img
            img(src=item.urlImg ?item.urlImg: defaultImg[index])
          +user-defined-item-content(item,serveAd2,index)
        else 
          +user-defined-item-content(item,serveAd2,index)
          .user-defined-item-img
            img(src=item.urlImg ?item.urlImg: defaultImg[index])
