extends ../layout.pug

block styles
	:combine(fileName="site-template-4-news-detail-wap.css")

block public-header

	block header
		include ../components/header
		include ../components/swiper
		+swiper('other')


block content
	if isBaiduPin === 'baidu_pinzhuan' && pinZhuan
	esle
		include ../components/company-info.pug
		- const cateList = renderData.articleCateList
		include ../components/news-detail.pug
		include ../components/product-recommend.pug
		include ../components/contact-form.pug

block footer
	div(style="padding-bottom:75px")
	- const { weixin, people } = renderData.basic.shop.color.wap
	- const { totalTip } = renderData.basic.shop.color
	include ../../../common/wap/dynamic-official-footer-contact.pug
	+dynamic-official-footer-contact(totalTip,weixin,people)

block scripts
	:combine(fileName="site-template-4-news-detail-wap.js")
block append scripts
	script.
		window.extraContactFormData = {position: 3, id: #{renderData.articleInfo.id}};
		window.adId = #{renderData.articleInfo.id};
