mixin news-list(newsList)
	if newsList && newsList.length > 0
		.news-list
			each item in newsList
				a.item(href=item.urlSuffix)
					h3 #{ item.name }
					.text.one-line #{ item.limitText }
					p #{ dateFormat2(item.modifiedTime) }

	else
		include ./default-content.pug
		+default-content("")
