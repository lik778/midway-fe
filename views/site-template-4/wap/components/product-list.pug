mixin product-list(type, productList)
	- hotIcon = "//file.baixing.net/202106/7e6d0360e8932f2e31bda4b5b1c8e5b3.png"
	if productList && productList.length > 0
		.products
			each item in productList
				- const isVideo = item.videoUrl
				a.product(href=item.urlSuffix,class=item.videoUrl?'video':'')
					.product__img
						img(src=item.headImg || defaultImg alt=item.infoSeoKeyWord || item.name)
						if type === 'hot'
							img.hot-icon(src=hotIcon alt=item.infoSeoKeyWord || item.name)
					p.only-twoline #{ item.name }
	else
		include ./default-content.pug
		+default-content("product")
