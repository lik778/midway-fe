extends ../layout
block head
    title #{ renderData.meta.title || "" }
    meta(name='keywords' content=renderData.meta.keywords || "")
    meta(name='description' content=renderData.meta.description || "")
block styles
    :combine(fileName="site-template-1-news-child-pc.css")

block content
    //- 面包屑
    include ../components/breadcrumbs.pug

    .container.clearfix
        .main
            include ../components/main-title.pug
            include ../components/news-list.pug

        .side-bar
            include ../components/sidebar/sidebar-title.pug
            +sidebar-title('文章分类')
            //-- const categoryList = [{name:'境外公司注册', url:'/site/news/detail'},{name:'代理记账服务', url:'/site/news/detail'},{name:'公司注册流程', url:'/site/news/detail'},{name:'食品公司注册', url:'/site/news/detail'}]
            - const cateList = renderData.articleCateList
            include ../components/sidebar/category-item.pug

            +sidebar-title('联系我们')
            include ../components/sidebar/contact.pug

    //-include ../components/page.pug
    include ../components/pagination
    - var totalPage = (renderData.articleList && renderData.articleList.totalPage) || 1
    +pagination(totalPage, renderData.currentPage, `/${renderData.shopName}/n`)
    include ../components/footer.pug
    //-QQ交谈
    include ../components/customer-service.pug

block scripts
    :combine(fileName="site-template-1-news-child-pc.js")
