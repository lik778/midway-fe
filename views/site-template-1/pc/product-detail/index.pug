extends ../layout
block head
    title #{ renderData.meta.title || "" }
    meta(name='keywords' content=renderData.meta.keywords || "")
    meta(name='description' content=renderData.meta.description || "")
block styles
    :combine(fileName="site-template-1-product-detail-pc.css")

block content
    //- 面包屑
    include ../components/breadcrumbs.pug

    .container.clearfix
        .main
            include ../components/product-detail.pug
        .side-bar
            include ../components/sidebar/sidebar-title.pug
            +sidebar-title('联系我们')
            include ../components/sidebar/contact.pug

            +sidebar-title('服务推荐')
            include ../components/sidebar/recommend.pug

            +sidebar-title('服务分类')
            - const cateList = renderData.productCateList
            include ../components/sidebar/category-item.pug

    include ../components/footer.pug
    //-QQ交谈
    include ../components/customer-service.pug

block scripts
    :combine(fileName="site-template-1-product-detail-pc.js")

