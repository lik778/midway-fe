extends ../layout

block styles
    :combine(fileName="site-template-1-news-pc.css")

block content
    //-:dateFormat(date="2019-09-09")
    //- 面包屑
    //-- const crumbs= [{label:'首页',link:"/" + renderData.shopName},{label:'新闻资讯',link:"/" + renderData.shopName + "/n"}]
    include ../components/breadcrumbs.pug

    .container.clearfix
        .main
            //-- const firstcrumb= '新闻资讯'
            //-- const secondcrumb= '境外公司注册'
            include ../components/main-title.pug
            include ../components/news-list.pug

        .side-bar
            include ../components/sidebar/sidebar-title.pug
            +sidebar-title('联系我们')
            include ../components/sidebar/contact.pug
            +sidebar-title('文章分类')
            - const cateList = renderData.articleCateList
            //-- const cateList = [{name:'境外公司注册', urlSuffix:'/site/news/child'},{name:'代理记账服务', urlSuffix:'/site/news/child'},{name:'公司注册流程', urlSuffix:'/site/news/child'},{name:'食品公司注册', urlSuffix:'/site/news/child'}]
            include ../components/sidebar/category-item.pug

    include ../components/pagination
    - var totalPage = (renderData.articleList && renderData.articleList.totalPage) || 1
    +pagination(totalPage, renderData.currentPage, `/${renderData.shopName}/n`)
    include ../components/footer.pug
    //-QQ交谈
    include ../components/customer-service.pug

block scripts
    :combine(fileName="site-template-1-news-pc.js")
