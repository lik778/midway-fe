extends ../layout

block styles
    :combine(fileName="site-template-1-home-pc.css")

//-使用了统一的header和nav
block content
    include ../components/swiper.pug
    .container.clearfix
        .main
            include ../components/company-profile.pug
            include ../components/product-title.pug
            include ../components/product-list.pug
            +product-list(12,'home')

        .side-bar
            include ../components/sidebar/contact-title-home.pug
            include ../components/sidebar/contact.pug

            - const sidebarNewsList = renderData.articleList.result
            include ../components/sidebar/home-sidebar-newslist-title.pug

            include ../components/sidebar/sidebar-newslist.pug
            include ../components/sidebar/category-icon.pug
            //-- const categoryList = [{name:'公司注册', url:'#'},{name:'代理记账', url:'#'},{name:'公司注销', url:'#'},{name:'公司转让', url:'#'}]
            - const cateList = renderData.productCateList
            include ../components/sidebar/category-item.pug

    include ../components/footer.pug
    //-QQ交谈
    include ../components/customer-service.pug

block scripts
    :combine(fileName="site-template-1-home-pc.js")
