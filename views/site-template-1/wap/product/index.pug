extends ../layout.pug
block styles
    :combine(fileName="site-template-1-product-wap.css")

block header
    include ../components/header

block content
    - const cateList = renderData.productCateList
    include ../components/toptab
    include ../components/product-list

    - const { totalPage } = renderData.productList
    include ../components/pagination
    +pagination(totalPage, renderData.currentPage, `${currentPathname}`)


block scripts
    :combine(fileName="site-template-1-product-wap.js")
block append scripts
    script.
        window.extraContactFormData = { position: 5 };
        window.contentType = 'product';
        window.trackSrc = 'listing';