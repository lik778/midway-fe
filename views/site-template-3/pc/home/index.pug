extends ../layout
include ../components/home/home-title.pug

block styles
		:combine(fileName="site-template-3-home-pc.css")

//-使用了统一的header和nav
block content
		include ../components/common/base-swiper.pug

		.container
				//-自身优势
				- selfAdvantage = [{title:'口碑载道',content:'重视信誉和口碑，客户忠实度高',icon:'//file.baixing.net/202105/c8f81a54a43830099bdc04f4b424da4c.png'},{title:'资质正规',content:'相关资质均有工商备案，资质可查，公司正规',icon:'//file.baixing.net/202105/625a56c2569eb767d8770999cbd8dd50.png'},{title:'贴心服务',content:'全方位的售前售后服务，提高客户满意度',icon:'//file.baixing.net/202105/f941fd50013f2f8ef7b51439e45b9079.png'},{title:'售后保障',content:'完善的售后服务体系和严格的管理制度，客户至上',icon:'//file.baixing.net/202105/5dde08cac771ec82db133664d24ddc1d.png'}]
				include ../components/home/self-advantage.pug

				//-服务项目
				- const { result : proList} = renderData.productList
				if proList && proList.length > 0
						+home-title('服务项目')
						include ../components/home/product-swiper.pug

				include ../components/home/about-us.pug
				if !isSem
					include ../components/home/viewPhone.pug

				//-自定义模块
				- const { autoConfig } = renderData
				if autoConfig && autoConfig.length > 0
					include ../components/home/user-defined-module.pug
					+user-defined-module(autoConfig)

				//-新闻资讯
				- articleList = renderData.articleList.result
				- const { articleRecommend } = renderData
				if articleList && articleList.length >0 || articleRecommend && articleRecommend.length >0
						+home-title('新闻资讯')
						include ../components/home/news-center.pug
						.new-center.clearfix
								+news-box('新闻资讯', articleList)
								
				+home-title('联系我们')
				include ../components/home/contact-us.pug
				
				//- 用于sem禁止外跳
				include ../../../common/pc/contact-form-sem.pug
				+contactFormSem('#F46')

block scripts
		:combine(fileName="site-template-3-home-pc.js")
block append scripts
		script.
				window.trackSrc = 'home';
