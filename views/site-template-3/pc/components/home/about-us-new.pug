.about-us-bgc
  .about-us-content
    .content-left
      .img-left
        img(src=renderData.basic.aboutModule.media, alt="")
      //-  视频 
      //- video.audio
      //-   <source src="#" type="#">
      //- span.ico-video
      //-   img(src="//file.baixing.net/202108/f911950bc7679d0a83235a02bbd9a36e.png")
    .content-right
      .content-right-title
        .right-title-left
          img(src=company.logo || defaultLogo)
          p.left-title 上海小猫咪爱宠医院
        .right-title-right
          -  tags = renderData.basic.aboutModule.tags
          each item in tags
            p.tag= item
      .content-right-body
        .body-content
          | !{ company.about.replace(/\n/g, '<br/>') || '暂时还未上传公司简介哦...' }
        a.view-detail(href=aboutLink) 查看详情
      .content-right-bottom
        .bottom-left
          img(src="//file.baixing.net/202108/e9cd4572f5363e55005f0e8616be31c3.png")
          .phone
            .service-hot 服务热线
            p.phoneNumber-slice.active #{ phone.content.slice(0,3)+'****'+phone.content.slice(7) }
            p.phoneNumber-full.none #{ phone.content }
        .bottom-right 查看完整电话
          
