mixin user-defined-module(userDefinedModuleList)
	each userDefinedModule in userDefinedModuleList
		.block-title
			h2 #{ userDefinedModule.mainModuleTitle }

			//-是否为奇数个，奇数个展示查看更多
		- const userDefinedList = userDefinedModule.subModuleBos
		- const isOdd = userDefinedList.length%2 === 0 ? false : true
		.user-defined-list
			each item, index in userDefinedList
				- const isWhite = item.fontColor === 1 ? true : false
				if index < 9
					- var id = '0' + (index+1)
				else
					- var id = index+1
				.user-defined-item( style = item.urlImg ? `background:url(${item.urlImg}) no-repeat center/100%` : {} )
					.number( style = isWhite ? {color:'#FFF'} : {} ) #{ id }
					div
						.title( style = isWhite ? {color:'#FFF'} : {} ) #{ item.title }
						.user-defined-line( style = isWhite ? {background:'#FFF'} : {})
						.content.only-twoline( style = isWhite ? {color:'#FFF'} : {} ) #{ item.content }

			if isOdd
				.user-defined-item.viewMore
					a(href="#")
						span 查看企业介绍详情