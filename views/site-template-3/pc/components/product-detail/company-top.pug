.company
	- const { headImg, name, price, contentImg, videoUrl } = renderData.productInfo
	//- TODO check video
	//- pre
	//- 	#{JSON.stringify(renderData.productInfo)}
	.company-left
		if (videoUrl)
			.video-con
				.video-wrapper
					video(src=videoUrl, loop, preload, controls)
				.video-cover
					img(src=headImg || defaultImg, alt="logo")
		else
			img(src=headImg || defaultImg, alt="logo")
		.company-text
			h3 #{ name }
			p 价格：#{ price || '面议' }
			if isSem !== "1"
				.company-address
					span 商家地址：
					span #{ company.address }
			include ../../../../common/pc/official-400-btn
			+official400Btn({backgroundColor:'#f46',borderColor:'#f46',phone:phone.content,navTipBorderColor:' #FFACBB',navTipBackgroundColor:'rgb(255,249,250)',navTipColor:'#B9346B'})
			if kf53StyleUrl && kf53StyleUrl.length > 0
				a.online-btn(href=kf53StyleUrl)
					img(src="//file.baixing.net/202102/9e46f359876a9b5a1f997d3ab8aae438.png", alt="icon")
					span 在线咨询
	.company-right
		if isSem !== "1"
			include ../sidebar/company-card.pug

