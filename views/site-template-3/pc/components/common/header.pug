.header-bgc
	.header
		a(href=nav[0].content)
			img(src=company.logo || defaultLogo, alt="")
			h3 #{ companyName }
		if person.uid
			p(style="display:none" ) uid：#{person.uid}
		if shopName
			p#shop-name(style="display:none") #{shopName}
		.nav-right
			if nav.length > 0
				each item in nav.slice(0,10)
					.nav-item
						a(href=item.content) #{ item.name }
							if item.position === 'productListPage' || item.position === 'articleListPage'
								.down-arrow
						if item.contentCateBos && item.contentCateBos.length > 0
							.nav-dropdown
								each i in item.contentCateBos.slice(0,10)
									a.only-oneline(href=i.urlSuffix) #{ i.name }

