section.news-detail__section
		.news-detail__subtitle 留言咨询
		.news-detail__contact-us
				.contact-form
						include ./contact-form.pug
				.company-info
						.info-label 公司信息
						.info-item
								span 联系人
								span #{ contactName.content }
						.info-item
								span 联系电话
								span.phoneNumber-slice.active #{ phone.content.slice(0,3)+'****'+phone.content.slice(7) || "暂未添加电话" }
								span.phoneNumber-full.no-active #{ phone.content || "暂未添加电话" }
								if phone.content & phone.content.length > 0
										span.viewPhone 查看
						.info-item
								span 微信号码
								span #{ weChat.content || "暂未添加微信号"}
						if qq && qq.length > 0
								.info-item
										span QQ号码
										span #{ qq[0].content }
						.info-item
								span 公司地址
								span #{ company.address || "暂未添加公司地址"}