.news-detail
		.news-detail-item
			- const {name, modifiedTime, contentImg, content, preArticle, nextArticle} = renderData.articleInfo
			h3 #{ name }
			if modifiedTime
					.news-detail-time
							p #{ dateFormat2(modifiedTime) }
			if contentImg
					.news-detail-pic
							img(src=contentImg, alt="")
			.news-detail-content.
					!{ content.replace(/\n/g, '<br/>') || '当前页面暂无内容，敬请期待...' }
		.news-nav
				if preArticle
						.news-nav__pre
								span 上一篇：
								a(href= preArticle.url) #{ preArticle.name}
				if nextArticle
						.news-nav__next
								span 下一篇：
								a(href=nextArticle.url) #{ nextArticle.name }

