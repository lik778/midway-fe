{
    "name": "midway-fe",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "dev": "cross-env NODE_ENV=local concurrently  \"webpack -c ./build/webpack.dev.config.js\" \"nest start --watch\"",
        "test:dev": "cross-env NODE_ENV=test concurrently  \"webpack -c ./build/webpack.dev.config.js\" \"nest start --watch\"",
        "release:dev": "cross-env NODE_ENV=development nest build &&  webpack -c ./build/webpack.prod.config.js",
        "release:test": "cross-env NODE_ENV=test nest build &&  webpack -c ./build/webpack.prod.config.js",
        "release:prod": "cross-env NODE_ENV=production nest build &&  webpack -c ./build/webpack.prod.config.js",
        "dev:docker-build": "docker build -t midway-fe .",
        "dev:docker-run": "docker run -p 7001:7001 midway-fe",
        "start:debug": "nest start --debug --watch",
        "start:dev": "cross-env NODE_ENV=development node --max-http-header-size=16384 dist/main",
        "start:test": "cross-env NODE_ENV=test node --max-http-header-size=16384 dist/main",
        "start:prod": "cross-env NODE_ENV=production node --max-http-header-size=16384 dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "~7.0.0",
        "@nestjs/config": "~0.5.0",
        "@nestjs/core": "~7.0.0",
        "@nestjs/platform-express": "~7.0.0",
        "antd": "^4.11.2",
        "axios": "~0.21.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "cookie-parser": "^1.4.5",
        "dayjs": "^1.9.6",
        "jquery": "~2.2.0",
        "log4js": "^6.3.0",
        "pug": "~3.0.0",
        "react": "~16.14.0",
        "react-dom": "~16.12.0",
        "react-router-dom": "^5.2.0",
        "reflect-metadata": "~0.1.13",
        "rimraf": "~3.0.2",
        "rxjs": "~6.5.4",
        "swiper": "~4.5.1"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.10",
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/express": "^4.17.3",
        "@types/jest": "26.0.10",
        "@types/node": "^13.9.1",
        "@types/react": "~16.14.0",
        "@types/react-dom": "^16.9.10",
        "@types/react-router-dom": "^4.3.2",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "3.9.1",
        "@typescript-eslint/parser": "3.9.1",
        "babel-loader": "^8.0.0-beta.0",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.2",
        "css-loader": "^5.0.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "glob": "^7.1.6",
        "html-webpack-plugin": "^4.5.1",
        "jest": "26.4.2",
        "mini-css-extract-plugin": "^1.3.0",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "prettier": "^1.19.1",
        "stylus": "^0.54.8",
        "stylus-loader": "^4.2.0",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.7.4",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack-cli": "^4.2.0",
        "webpack-merge": "^5.4.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "engines": {
        "node": ">= 12"
    }
}
