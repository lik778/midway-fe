.official-400-btn
  width 178px
  height 46px
  position relative
  text-align center
  border 1px solid  
  border-radius 2px
  margin-right 20px
  display inline-flex
  align-items center
  justify-content center
  margin-top 36px
  font-size 16px
  color #fff
  .official-nav-phone-num-tip 
    box-sizing: border-box
    width: 154px
    padding: 0 10px
    position absolute
    bottom: 0
    right 0
    transform: translateX(0) translateY(110%)
    line-height: 30px
    border-radius: 4px
    font-size: 16px
    border 1px solid #FFACBB
    background: rgb(255,249,250)
    z-index 100
    .tip-text
      color #B9346B
    &.hide
      display: none
    // .time-num 
    //   color #f46
    .triangle
      width: 0;
      height: 0;
      position: absolute
      top: 0;
      left: 12px
      em
        position: absolute;
        width: 0px;
        height: 0px;
        border: 10px dashed transparent;
        border-bottom-color: #FFACBB; 
        left: 10px;
        top: -20px;
      span
        position: absolute; 
        width: 0px;
        height: 0px;
        border: 10px dashed transparent;
        border-bottom-color: rgb(255,249,250) ; 
        left: 10px;
        top: -19px;