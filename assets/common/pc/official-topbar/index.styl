.topbar-bg
	width 100%
	background-color #fff
	border-bottom: 1px solid #EEEEEE
	.topbar
		display flex
		justify-content space-between
		align-items center
		width 1220px
		height 70px
		line-height 70px
		margin 0 auto
		.left
			display flex
			justify-content flex-start
			align-items flex-end
			img
				width 66px
				height 32px
		.right
			display: flex
			justify-content: end
			align-items: center
			.link-right
				line-height: 18px
				padding-left: 18px
				font-size: 12px;
				color #666666
				&:hover
					color #f46
				&+.link-right
					margin-left 18px
					border-left: 2px solid silver

