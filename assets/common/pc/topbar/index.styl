.topbar-bg
	width 100%
	background-color #333
	.topbar
		width 1220px
		height 44px
		line-height 44px
		margin 0 auto
		position relative
		//display flex
		//align-items center
		>img
			margin-right 9px
			width 18px
			height 18px
			vertical-align middle
		span
			font-size 14px
			color #fff
		.view
			color #FF2D38
			margin-left 15px
			&:hover
				cursor pointer
		a
			position absolute
			right 0
			//top 11px
			img
				vertical-align middle
				width 44px
				height 22px
			span
				display inline-block
				margin-left 20px
				font-size 14px
				color #e2e2e2
				font-family PingFangSC-Regular
				position  relative
				&::before
					content "."
					position absolute
					left 10px
					top 50%









