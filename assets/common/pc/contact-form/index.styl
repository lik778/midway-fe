.a-container
  box-sizing: border-box
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  padding: 25px 36px  
  .a-title
    margin-bottom: 26px
    font-size: 30px
    font-weight: 600
    color: #333333
    line-height: 30px
    text-align: center
  .a-content
    width: 100%
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center
    input
      width: 100%
      height: 44px
      padding: 15px 10px
      background: #FFFFFF
      border-radius: 4px
      border: 1px solid #E7E7E7
      &::-webkit-input-placeholder
        color: #999999
      &:-ms-input-placeholder
        color: #999999
      &:-moz-placeholder
        color: #999999
      &:focus
        border-radius: 4px
        outline: #CCCCCC solid 2px
    .a-content-item
      width: 100%
      display: flex
      flex-direction: column
      justify-content: flex-start
      margin-bottom:  20px
      .item-label
        display: flex
        justify-content: flex-start
        align-items: center
        margin-bottom: 8px
        min-width: 47px
        font-size: 16px
        font-weight: 500
        color: #333333
        line-height: 22px
        .labe-icon
          color: #FF4365
    .a-content-items
      width: 100%
      display: flex
      justify-content: flex-start
      align-items: center
      margin-bottom: 20px
      &:last-child
        margin-bottom: 10px
      .items-label
        display: flex
        justify-content: flex-start
        align-items: center
        margin-bottom: 8px
        width: 163px
        font-size: 16px
        font-weight: 500
        color: #333333
        line-height: 22px
        .label-icons
          color: #FF4365
    .a-button
      width: 100%
      height: 47px
      margin-top: 8px
      line-height 47px
      text-align: center
      background: #FF4365
      border-radius: 4px
      color: #FFFFFF
      font-size: 16px
      cursor: pointer