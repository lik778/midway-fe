@import '../official-white-breadcrumb/index.styl'

.topbar-bg-white
	width 100%
	background-color #fff
	border-bottom 1px solid #EEEEEE
	.topbar
		display flex
		justify-content space-between
		align-items center
		width 1220px
		height 70px
		position relative
		line-height 70px
		margin 0 auto 
		.left
			display flex
			justify-content flex-start
			align-items center
			img
				width 66px
				height 32px
				margin-right 20px 
			ul
				transform translateY(6px)
		.right
			display flex
			justify-content end
			align-items center
			.search 
				display flex
				justify-content flex-start
				width 200px
				margin-right 10px
				position relative
				.input
					width 160px
					height 30px
					line-height 30px
					padding 0 15px
					border 1px solid #DDDDDD
					font-size 12px
					outline none
					color #999999
					&::-ms-clear
						display none
					&:valid + .clear
						display inline
				.clear
					display none 
					width 16px  
					height 16px 
					position absolute 
					top: 50%
					right 50px
					transform: translateY(-50%)
					background url(//file.baixing.net/202105/b52876a539647c636eef53f60f91b291.png) no-repeat 
					outline none
					cursor pointer
				.search-btn
					border 1px solid #DDDDDD
					padding 0
					margin 0 0 0 -1px
					height 30px
					line-height 30px
					background #fff
					width 40px
					border-top-right-radius 2px
					border-bottom-right-radius 2px
					color #fff
					font-size 16px
					cursor pointer
					.search-icon
						width 15px
						height 15px
			.link-right
				line-height 18px
				padding-left 16px
				font-size 12px
				color #666666
				&:hover
					color #666666 !important
				&+.link-right
					margin-left 16px
					border-left 2px solid silver

