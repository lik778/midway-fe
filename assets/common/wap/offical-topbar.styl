
.bx-header
  .cm-nav-bar
    background #f2f2f2
    height 56px
    line-height 1.4
    overflow hidden
    position relative
    background linear-gradient(90deg,#FF4466, #FF8450)
    color #fff
    div
      width auto
    .bx-nav-logo
      float left
      padding 12px 7px
      .bx-logo
        $-icon-size-bx-logo = 50px 26px
        size $-icon-size-bx-logo
        background url(//file.baixing.net/201708/e6bf9e4ef487b6bca17677f734e5507c.png) no-repeat
        background-size $-icon-size-bx-logo

    .bx-nav-city
      float left
      padding 20px 3px 10px
      font-size 14px
      color #fff
      font-weight normal
      span
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
        text-decoration none
        max-width 30px
        display inline-block
      .icon-arrow-down
        font-size 12px
        padding-left 2px
        color #fff

  .bx-nav-search
    top 11px
    left 120px
    right 100px
    input
      color #fff
      box-sizing border-box
      -webkit-appearance none
      border-radius 0
      width 100%
      border 0
      height 36px
      line-height 36px
      padding-left 30px
      padding-right 18px
      outline none
      font-size 14px
      opacity .8
      background rgba(255, 255, 255, 0.3)
    i.baicon
      color #fff
      position absolute
      left 10px
      top 12px
      opacity .8
  .cm-nav-bar-right
    width auto
    .bx-nav-btn:last-of-type
      padding-right 0
    a.bx-nav-btn
      color #fff
      margin-top 8px
      padding 0 10px
      text-decoration none
      font-size 14px
      height 28px
      line-height 28px
      display block
      float left
      position relative

      & + a.bx-nav-btn
        &::before
          content ''
          height 12px
          border-left 1px solid rgba(255,255,255,0.8)
          position absolute
          left 0
          top 8px

    .bx-nav-notice
      position absolute
      text-decoration none
      right 5px
      top 8px
      width auto
      min-width 1em
      height 1em
      line-height 1em
      a
        max-width 28px
        min-width 1.5em
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
        display inline-block
        box-sizing border-box
        padding 1px 4px
        border-radius 10px
        background $cm-color-primary
        color #fff
        font-size 12px
        text-align center
