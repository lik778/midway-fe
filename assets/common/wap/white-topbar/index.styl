
.bx-header-white
  .cm-nav-bar
    background #f2f2f2
    height 56px
    line-height 1.4
    overflow hidden
    //position relative
    //background linear-gradient(90deg,#FF4466, #FF8450)
    //color #fff
    background #fff
    display flex
    align-items center
    justify-content space-between
    div
      box-sizing border-box
      //position absolute
      //top 0

    .bx-nav-logo
      margin-right 2vw
      padding 12px 7px
      .bx-logo
        height 26px
        
  .cm-nav-bar-right
    width calc(100vw - 50px)
    display flex
    justify-content flex-end
    position relative
    align-items center

    .bx-nav-btnlast-of-type
      padding-right 0
    a.bx-nav-btn
      color #666
      padding 0 10px
      text-decoration none
      font-size 14px
      height 28px
      line-height 28px
      display block
      float left
      position relative

      //& + a.bx-nav-btn
      &::before
        content ''
        height 12px
        //border-left 1px solid rgba(255,255,255,0.8)
        border-left 1px solid #666
        position absolute
        left 0
        top 8px

    //由于度娘要把搜索图标放右边，所以改了DOM和CSS
    .bx-nav-search
      //background-color #f2f2f2
      //width 50vw
      position relative
      margin-right 3vw
      .search-form
        margin-bottom 0
        .search-query
          //color #fff
          box-sizing border-box
          -webkit-appearance none
          border-radius 0
          width 100%
          border 0
          height 36px
          line-height 36px
          outline none
          font-size 14px
          opacity 0.8
          background rgba(255, 255, 255, 0.3)
          padding-right: 50px
          &:focus
            border-bottom: 1px solid #E2E2E2
          &::-webkit-search-cancel-button{
            -webkit-appearance: none;
          }
          &::-ms-clear
            display none
          &:valid + .clear
            display inline
        .clear
          display none 
          width 14px  
          height 14px 
          position absolute 
          top: 50%
          right 26px
          transform: translateY(-50%)
          background url(//file.baixing.net/202106/f74265c45ac545d77010354d33397bb0.png) no-repeat 
          background-size: cover
          outline none
          cursor pointer
      img.baicon
        width 14px
        position absolute
        right 0px
        top 12px
        opacity 0.8
    a.bx-nav-btn
      box-sizing border-box
      min-width 15vw
      text-align center