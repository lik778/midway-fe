.pagination
  padding 0 12px 30px
  box-sizing border-box
  display flex
  justify-content space-between
  gap 10px
  color #999
  text-align center
  background white

  > .prev-page,
  > .next-page,
  > span
    position relative
    display block
    flex-grow 1
    box-sizing border-box
    border 1px solid #EFEFEF
    border-radius 2px
    padding 12px 0
    width 120px
    height 40px
    line-height 16px
    text-decoration none

  > span
    width 80px

  .select-change-container
    position relative
    background-color #fff

    select
      position absolute
      width 80px
      opacity 0
      top 0
      left 0
      height 40px
      appearance none
      text-indent 45px
      cursor pointer

    .select-page-num
      display block
      color #333

      //三角符号

      &::after
        content ''
        position absolute
        top 50%
        right 4px
        margin-top -2px
        border 5px solid transparent
        border-top-color #e6e6e6

  .prev-page
    color #333
    background-color #fff

  .next-page
    color #333
    background-color #fff

  .disabled
    color #999
