  .cm-nav-bar-right
    width calc(100vw - 50px)
    display flex
    justify-content flex-end
    position relative
    align-items center

    .bx-nav-btnlast-of-type
      padding-right 0
    a.bx-nav-btn
      color #666
      padding 0 10px
      text-decoration none
      font-size 14px
      height 28px
      line-height 28px
      display block
      float left
      position relative

      //& + a.bx-nav-btn
      &::before
        content ''
        height 12px
        //border-left 1px solid rgba(255,255,255,0.8)
        border-left 1px solid #666
        position absolute
        left 0
        top 8px

    //由于度娘要把搜索图标放右边，所以改了DOM和CSS
    .bx-nav-search
      //background-color #f2f2f2
      //width 50vw
      position relative
      margin-right 3vw
      input
        //color #fff
        box-sizing border-box
        -webkit-appearance none
        border-radius 0
        width 100%
        border 0
        height 36px
        line-height 36px
        outline none
        font-size 14px
        opacity 0.8
        background rgba(255, 255, 255, 0.3)
        &::-webkit-input-placeholder
          color #fff
        &::-webkit-search-cancel-button
          transform translateX(-15px)
      img.baicon
        width 14px
        position absolute
        right 0px
        top 12px
        opacity 0.8
    a.bx-nav-btn
      box-sizing border-box
      min-width 15vw
      text-align center

