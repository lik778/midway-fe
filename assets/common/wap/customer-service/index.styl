.customer-service
    position fixed
    right: 0
    top: 60%
    z-index: 999
    .service
        &-item
            cursor pointer
            border: 1px solid #409EFF
            background: #fff
            transform: scale(.7)
            padding: 5px 0
            position relative
            transform-origin: top right
            &::before // 过来过渡hover时候中间有个空隙
				content ''
				position absolute
				width 50px
				height 100%
				left -50px
				bottom 0
				display none
        &-logo
            width: 100%
            height: 30px
            margin-bottom: 5px
            &.bax
                background: url('//file.baixing.net/publicity-fe/static/assets/safe-wap-feedback.png') no-repeat center/contain
        &-content
            width: 42px
            height: 194px
            &.bax
                background: url('//file.baixing.net/publicity-fe/static/assets/title-icon-wap.png') no-repeat center/contain
        &-item:hover
				&::before
					display block
				.service-modal
					display block
				.service-name
					color #FF2D38
        &-modal
				display none
				position absolute
				background-color #fff
				right calc(100% + 20px)
				top 50%
				padding 27px 25px
				transform translateY(-50%)
				box-shadow 0 4px 10px rgba(#000, 0.05)
				cursor initial

				&::after
					content ''
					background-color #fff
					width 15px
					height 15px
					position absolute
					right -5px
					top 50%
					transform translateY(-50%) rotate(45deg)

				&__bax
					margin-bottom 12px
					> div
						white-space nowrap
						font-size 14px
						line-height 20px
					.bax-number
						color: #409EFF
					.bax-btn
						cursor pointer
						margin-top 8px
						display flex
						flex-direction row
						justify-content center
						align-items center
						width 82px
						height 26px
						background-color #5799FF
						border-radius 2px
						.bax-link .bax-text
							font-family PingFangSC-Medium
							font-size 12px
							color #FFFFFF
							line-height 12px
                    
                &__mobile,
				&__wechat
					> div
						white-space nowrap
						font-size 14px
						line-height 20px
					.mobile
						&-title
							margin-bottom 7px
							font-size 14px
							line-height 14px
							color: #666666
						