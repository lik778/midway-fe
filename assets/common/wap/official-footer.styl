
.bx-footer
  min-height 40px
  text-align center
  background-color #fff
  font-size 12px
  color #999
  margin-top 15px
  &:empty
    display none
  &:not(:empty)
    background-color $cm-color-bg
  ul.platform
    display flex
    justify-content space-between
    padding-top 20px
    margin 0 38px
    li>a
      &.selected
        opacity 1
      color #666
      opacity 0.8
      height 85px
      width 50px
      display block

      .icon
        display block
        height 43px
        width 43px
        border 1px solid currentColor
        border-radius 50%
        margin 0 auto
        background-repeat no-repeat
        background-position center
        &.pc
          background-image url('data:image/png;base64,')
          background-size 28px 24px
        &.mobile
          background-image url('data:image/png;base64,')
          background-size 17px 24px
        &.guang
          background-image url('data:image/png;base64,')
          background-size 20px 20px
        &.app
          background-image url('data:image/png;base64,')
          background-size 18px 25px
        &.weixin
          background-image url('data:image/png;base64,')
          background-size 20px 20px
      span
        line-height 32px
  ul.child
    border-top 1px dashed #e6e6e6
    display flex
    li
      flex 1
      border-left 1px solid #e6e6e6
      margin-top 20px
      margin-bottom 20px
      line-height 1
      &:first-child
        border-left 0
      a
        color inherit
  ul.rule
    border-top 1px dashed #e6e6e6
    li
      display inline-block
      vertical-align top
      margin-bottom 15px
      margin-top 15px
      line-height 1
      &:not(:first-child)
        border-left 1px solid #e6e6e6
      a, span
        display inline-block
        vertical-align top
        padding 0 8px
        line-height 1
        color inherit
        text-decoration none
