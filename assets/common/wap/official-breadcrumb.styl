.breadcrumb
  display flex
  padding 5px 10px
  font-size 14px
  margin-top 2px
  a
    color #666
    &:last-child
      display inline-block
      max-width 40vw
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

  .and
    margin 1px 6px
    display inline-block
    width 6px
    height 6px
    border-top 1px solid #666
    border-right 1px solid #666
    transform rotate(45deg)
