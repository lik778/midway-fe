@import '../block-title/index.styl'
.product-swiper-box
  background-color: #fff
  width 1200px
  margin 16px auto 0
  padding-bottom: 24px
  position relative
  .swiper-container
    margin 0 40px 24px
    .swiper-wrapper
      height auto
      .swiper-slide
        height: 319px;
  .swiper-pagination
    margin  0 auto
    position relative
  .product-swiper-pagination
    display: inline-block;
    width 4px
    height 4px 
    background #DDDDDD
    opacity 1
    border-radius 2px
    cursor pointer
    &+.product-swiper-pagination
      margin-left 4px
  .product-swiper-pagination-active
    width 20px
    background-color #f46  
  .products
    display flex
    justify-content flex-start
    align-items center
    height 319px
    .product
      display block
      width 270px
      position relative
      background-color #F7F7F7
      &+.product
        margin-left 13px
      img
        width 100%
        height 193px
      .img-mask
        position absolute
        top: 0
        left: 0
        width: 100%
        height: 193px
        z-index 10
        background: rgba(255, 68, 102, 0.15);
      .product-desc
        width 100%
        text-align center
        position relative
        padding-bottom 24px 
        p
          padding 22px 10px
          font-size: 18px;
          font-weight: 500;
          color: #333333;
          line-height: 18px;
        .vad-btn
          width 116px
          height 40px
          margin 0 auto
          border 1px solid #FF4466
          text-align center
          line-height 40px
          color #FF4466
          cursor pointer
      &:hover
        .product-desc
          background-color #FF4466
          p
            color #fff
          .vad-btn
            background-color #fff

