.news-list-title-box
    display flex
    justify-content space-between
    align-items center
    padding 0 20px 0 15px
    height 58px
    background-color #fff
    border-bottom 1px solid #E2E2E2
    .title
        height 18px
        font-size 18px
        font-weight bold
        color #333333
        line-height 18px
    .more
        font-size 14px
        color #AAAAAA
        line-height 14px
.news-list
    box-sizing border-box
    padding 0 16px
    background-color #fff
    margin-bottom 15px
    .item
        display flex
        justify-content space-between
        align-items flex-start
        padding 24px 0 16px
        &+.item
            border-top 1px solid #F3F3F3
        .left
            width 50px
            .day
                margin-bottom 8px
                font-size 20px
                font-weight 500
                color #666666
                line-height 20px
            .year-month
                font-size 12px
                color #999999
                line-height 12px
        .right
            width 280px
            .title
                margin-bottom 16px
                font-size 14px
                font-weight 600
                color #333333
                line-height 14px
            .desc
                min-height 32px
                font-size 12px
                color #999999
                line-height 18px
