.contact-form
	background-color #fff
	.block-title
		padding 20px 15px
		border-bottom 1px solid #e2e2e2
	.contact-form-list
		padding 2px 15px 20px
		.form-item
			label
				font-size 14px
				color #333
				margin 18px 0 12px
				display inline-block
			.form-input
				input
				textarea
					width 100%
					border none
					background #F7F7F7
					border-radius 2px
					padding 17px 10px
					resize none
			button
				background-color #FF4466
				text-align center
				color #fff
				width 100%
				height 44px
				line-height 44px
				margin-top 24px
				font-size 16px
				border 1px solid #FF4466
				border-radius 22px
			&.required
				label
					position relative
					&::after
						content '*'
						position absolute
						right -15px
						font-size 16px
						color #FF4466
