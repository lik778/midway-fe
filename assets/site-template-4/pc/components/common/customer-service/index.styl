#bax
	width: 70px
	height: 78px
.customer-service
	position fixed
	right 10px
	bottom 50px
	z-index 999
	width: 70px
	.customer-service__group
		background-color #fff
		box-shadow 0 4px 10px rgba(#000, 0.05)

		.service
			&-item
				display: flex
				flex-direction: column
				justify-content: center
				align-items: center
				box-sizing: border-box
				height: 75px
				cursor pointer
				position relative
				border-bottom: 4px solid #f1f2f6
				&:last-child
					border-bottom: none
				&::before // 过来过渡hover时候中间有个空隙
					content ''
					position absolute
					width 50px
					height 100%
					left -50px
					bottom 0
					display none
				.baixing-baozhang
					width: 19px !important
					height: 22px !important
				.bax
					color #409EFF
			&-name
				font-size 14px
				text-align center
			&-logo
				width 30px
				height 30px
				margin-bottom 5px
				&.kf53
					background url('//file.baixing.net/202111/b8072a92b3694ae147eafeae4c86b071.png') no-repeat center center/100%
				&.bax
					background: url('//file.baixing.net/publicity-fe/static/assets/safe-pc-feedback.png') no-repeat center/100%
				&.qq
					background url('//file.baixing.net/202102/18462324f0fffdb03b4f3a82da6b4be6.png') no-repeat center center/100% 100%
				&.mobile
					background url('//file.baixing.net/202102/2a1a28b5fb72e227b0178c341341addd.png') no-repeat center center/100%
				&.wechat
					background url('//file.baixing.net/202102/a278452bf26c6a6b4b870c69d2bcd615.png') no-repeat center center/100%

			&-item:hover
				&::before
					display block
				.service-modal
					display block
				.kf53
					background url('//file.baixing.net/202111/6bb9caf88a177d963031d2e087fbb27f.png') no-repeat center center/100%
				.qq
					background url('//file.baixing.net/202102/b35eae79d56d8081f3c029e3e06c5040.png') no-repeat center center/100% 100%
				.mobile
					background url('//file.baixing.net/202102/274fb15f6bf4bf0cb1567d1fead4be0b.png') no-repeat center center/100%
				.wechat
					background url('//file.baixing.net/202102/ba8009496bfbdbe07f62ab855d1b9980.png') no-repeat center center/100%

			&-modal
				display none
				position absolute
				background-color #fff
				right calc(100% + 20px)
				top 50%
				padding 27px 25px
				transform translateY(-50%)
				box-shadow 0 4px 10px rgba(#000, 0.05)
				cursor initial

				&::after
					content ''
					background-color #fff
					width 15px
					height 15px
					position absolute
					right -5px
					top 50%
					transform translateY(-50%) rotate(45deg)

				&__bax
					margin-bottom 12px
					> div
						white-space nowrap
						font-size 14px
						line-height 20px
					.bax-number
						color: #409EFF
					.bax-btn
						cursor pointer
						margin-top 8px
						display flex
						flex-direction row
						justify-content center
						align-items center
						width 82px
						height 26px
						background-color #5799FF
						border-radius 2px
						.bax-link .bax-text
							font-family PingFangSC-Medium
							font-size 12px
							color #FFFFFF
							line-height 12px
					.click-copy
						margin-top 20px
						color #426CE8
						border 1px solid #426CE8
						border-radius 15px
						border-radius 15px
						height 30px
						line-height 30px
						text-align center
						cursor pointer	
				
				&__qq
					&:not(:last-child)
						margin-bottom 20px
					.qq-name
						text-align center
						font-size 14px
						margin-bottom 5px
						width 100px
					.qq-link
						width 100px
						height 30px
						box-sizing border-box
						text-align center
						line-height 30px
						background #426CE8
						color #fff
						border-radius 15px
						border-radius 15px
						font-size 12px
						display flex
						align-items center
						justify-content center
						cursor pointer
						> a
							display flex
							align-items center
							color #fff
							img
								width 16px
								margin-right 5px

				&__mobile,
				&__wechat
					> div
						white-space nowrap
						font-size 14px
						line-height 20px
					.mobile
						&-title
							margin-bottom 7px
							font-size 14px
							line-height 14px
							color: #666666
						&-number
							margin-top 5px
							color #FF2D38
							width 100px
							text-overflow ellipsis
							overflow hidden
						&-info-time,&-info-people
							color #999999
							font-size 12px
							line-height 12px
						&-info-people
							margin-top 20px
						&-info-time
							margin-top 10px

					.click-copy
						margin-top 20px
						color #426CE8
						border 1px solid #426CE8
						border-radius 15px
						border-radius 15px
						height 30px
						line-height 30px
						text-align center
						cursor pointer

	#back-to-top
		margin-top 4px
		margin-bottom: 30px
		background-color #fff
		box-shadow 0 4px 10px rgba(#000, 0.05)
		padding 20px 0
		cursor pointer
		text-align center

		.back-to-top
			&__icon
				margin 0 auto 15px
				width 20px
				height 22px
				background url('//file.baixing.net/202205/84b00d3745455524132fe174595f54a1.png') no-repeat center center/100% 100% 
			&__text
				font-size 12px

		&:hover
			.back-to-top
				&__icon
					background url('//file.baixing.net/202205/84b00d3745455524132fe174595f54a1.png') no-repeat center center/100% 100%

#wechat-id-textarea
	position absolute
	left 99999px
