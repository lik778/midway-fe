.item-p-new
  position relative
  float left
  width 291px
  margin-right 23px
  border-radius 4px
  overflow hidden
  background-color: #fff
  &:hover
    img
      transform: scale(1.05)
    p
      color: #FFFFFF;
  &:nth-child(-n+3)
    margin-bottom 20px
  &:nth-child(3n)
    margin-right 0
  .em
    overflow: hidden
    height 221px
    width 100%
    img
      height 100%
      width 100%
      transition: all 1s
  &.video
    &::after
      content ''
      position absolute
      left 50%
      top 30%
      width 55px
      height 55px
      transform: translateX(-50%)
      background url("data:image/png;base64,")
      background-size 100%
      cursor pointer
  .hot-icon
    height 36px
    width auto
    position absolute
    top 157px
    left 0
  p
    box-sizing border-box
    font-size 20px
    color #333
    text-align justify
    width 291px
    height: 65px
    line-height 65px
    padding-left: 20px
    color: #212121;
    overflow hidden
    // font-weight: bold
  .show-desc
    display none
    width 150px
    height 40px
    text-align center
    line-height 40px
    background-color #FF2D38
    color #fff
    margin 28px 70px