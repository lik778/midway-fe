
.item-p
  position relative
  float left
  width 384px
  height: 380px
  margin-right 34px
  border-radius: 6px
  overflow hidden
  color: #212121;
  // font-weight: bold;
  font-size: 24px;
  background-color #F6F6F6
  &:hover
    .productImg
      transform: scale(1.05)
    p
      color: #FFFFFF
      .arrow
        display: inline-block
  &:nth-child(n+4)
    margin-top 20px
  &:nth-child(3n)
    margin-right 0
  .em
    overflow hidden
    height 293px
    width 100%
    img
      height 100%
      width 100%
      transition: all 1s
  &.video
    &::after
      content ''
      position absolute
      left 50%
      top 30%
      width 55px
      height 55px
      transform: translateX(-50%)
      background url("data:image/png;base64,")
      background-size 100%
      cursor pointer
  .item-hot-icon
    height 43px
    width 84px
    position absolute
    top 0
    right 0
    img
      width: 100%
      height: 100%
  p
    position relative
    box-sizing border-box
    text-align left
    padding: 0 81px 0 24px
    height  88px
    width 100%
    margin 0
    line-height 88px
    overflow hidden
    border-radius 6px
    .arrow
      display: none
      position absolute
      top: 50%
      right: 38px
      transform: translateY(-50%)
      width: 43px
      height: 21px
      background: url('//file.baixing.net/202205/6f2666c3e9484bb9dadd85e47001f9a3.png') no-repeat
      background-size: 100%
  .show-desc
    display none
    width 150px
    height 40px
    text-align center
    line-height 40px
    background-color #FF2D38
    color #fff
    margin 28px 70px
