.item-p
  position relative
  float left
  width 287px
  // height 280px
  margin-right 10px
  // background-color #fff
  border 1px solid transparent
  border-radius 4px
  overflow hidden
  &:nth-child(n+5)
    margin-top 10px
  &:nth-child(4n)
    margin-right 0
  img
    height 193px
    width 100%
  &.video
    &::after
      content ''
      position absolute
      left 50%
      top 30%
      width 55px
      height 55px
      transform: translateX(-50%)
      background url("data:image/png;base64,")
      background-size 100%
      cursor pointer
  .hot-icon
    height 36px
    width auto
    position absolute
    top 157px
    left 0
  p
    box-sizing border-box
    font-size 16px
    color #333
    text-align justify
    // margin 19.6px 16px
    height  60px
    width 287px
    padding 22px 0 0 16px
    margin 0
    background-color #fff
    // line-height 25px
    overflow hidden
    border-radius 4px
  .show-desc
    display none
    width 150px
    height 40px
    text-align center
    line-height 40px
    background-color #FF2D38
    color #fff
    margin 28px 70px
