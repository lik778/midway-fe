.about-us-bgc
  box-sizing border-box 
  width 1190px
  display flex
  justify-content center
  align-items center
  .content-left
    position relative
    width 637px
    height 359px
    margin-top 0
    border-radius 7px
    overflow hidden
    order: 0
    transition: all 1s
    &:hover
      transform: scale(1.05)
    .tags
      position absolute
      top: 23px
      right: 0
      z-index: 999
      .tag
        width: 120px
        height: 40px
        line-height 40px
        text-align: center
        opacity: 0.79;
        margin-top: 6px
        color:  #FFFFFF;
        font-size: 14px
        &:first-child
          margin-top: 0
    .audio
      width 100%
      height 100%
    audio
      width 100%
      height 100%
    .ico-video
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
      width 54px
      height 54px
      img
        width 100%
        height 100%
  .content-right
    box-sizing: border-box
    order: 1
    width 553px
    height: 397px
    display flex
    flex-direction column
    justify-content flex-start
    padding 30px 24px 21px 25px
    box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.17);
    border-radius: 4px;
    background: #FFFFFF;
    .view-detail
      width: 145px;
      height: 40px;
      margin-top: 21px
      line-height 40px
      text-align: center
      border-radius: 20px;
      border: 1px solid #E7E7E7;
      font-size: 14px;
      color: #5D5D5D;
      &:hover
        background: #FFBE36
    .content-right-title
      display flex
      justify-content flex-start
      align-items center
      margin-bottom 12px
      .right-title-left
        display flex
        justify-content center
        align-items center
        img
          width 119px
          height 55px
      .right-title-right
        margin-left 21px
        .left-title
          font-size 20px
          font-weight bold
          margin-bottom 10px
          color: #212121
    .content-right-body
      position relative
      color: #5D5D5D;
      height: 217px
      overflow hidden
      .body-content
        height: 217px
        color #666666
        line-height 24px
        font-size 14px
    .content-right-bottom
      height 40px
      display flex
      align-items center
      margin-top 16px
      .bottom-left
        display flex
        justify-content center
        align-items center
        img
          width 63px
          height 37px
        .phone
          margin-left 13px
          padding-left 0
          text-align left
          .active
            font-size 20px
            color #FF4365
            font-weight bold
          .service-hot
            margin-bottom 1px
            font-size 12px
            color #333333
            font-weight bold
          .service-tel
            font-size 24px
            color #FF4365
            font-weight bold
      .bottom-right
        width 160px
        height 40px
        margin-left 20px
        background-color #ED4646
        border-radius 4px
        color #FFFFFF
        line-height 40px
        font-size 14px
        text-align center
        cursor pointer

.about-us-bgc
  .video-con
    width 100%
    height 100%
    .video-wrapper
      display flex
      justify-content center
      align-items center
      width 100%
      height 100%
      background-color black
      video
        flex 1
        width 100%
        height 100%
        cursor pointer
        z-index 9
    .video-cover
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 9
      cursor pointer
      img
        width 100%
        height 100%
    .video-cover::after
      content ''
      position absolute
      left calc(50% - 28px)
      top calc(50% - 28px)
      width 55px
      height 55px
      background url("data:image/png;base64,")
      background-size 100%
      cursor pointer
