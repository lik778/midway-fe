.news-list 
  display: flex
  justify-content: space-between
  align-content: center
  flex-wrap: wrap
  padding: 0 20px
  margin-bottom 24px
  background-color: #fff
  border-radius: 4px
  box-shadow: 0 0 2px rgba(#000,.1)
  .line-bottom
    position relative
    &::after
      content ' '
      width: 100%;
      height: 2px;
      position: absolute
      bottom: 0
      left: 0
      background-image: linear-gradient(to right, #EAEAEA 0%, #EAEAEA 50%, transparent 40%);
      background-size: 8px 2px;
      background-repeat: repeat-x;
  .news-item
    display: flex
    justify-content: space-between
    align-items: flex-start
    width: 542px
    padding: 28px 0
    .left
      display: flex
      flex-direction: column 
      justify-content: center
      align-items: center
      width: 85px
      height: 85px
      background-color: #F2F2F2
      .date
        font-size: 24px;
        font-weight: bold
        color: #666
      .year-month
        font-size: 14px;
        color: #666
    .right
      width: calc(100% - 100px)
      .title
        line-height: 40px
        font-size: 14px
        font-weight: bold
        color: #333333;
      .content
        line-height: 24px
        font-size: 14px
        color: #999
.show-more-btn
  display block
  width 320px
  height 48px
  line-height 48px
  text-align center
  margin 0 auto 50px
  cursor pointer
  border 1px solid #DDDDDD
  border-radius: 4px
  .set-color
    font-size 16px
    color #666666
    font-weight: 500
