.company-card
  width: 224px
  height: 250px
  box-sizing border-box
  margin-bottom 20px
  border-radius: 4px;
  border: 1px solid #EFEFEF;
  .company-titles
    box-sizing border-box
    display: flex
    justify-content: space-between
    align-items: center
    padding-left: 7px
    height: 52px
    width: 100%
    background: #F7F7F7
    .company-logo
      width 26px
      height 26px
      margin-right: 6px
      background-color #fff
      overflow hidden
      background-size cover
    .company-name
      width: 182px
      font-size 14px
      text-align left
  .company-bottom
    height: 100%
    padding: 21px 15px
    .company-medals
      font-size 12px
      display flex
      justify-content space-between
      .medal.shop
        width: 89px
        height: 24px
        img
          width: 100%
          height: 100%
    .certificate
      &-label
        color #333333
        font-size 12px
        text-align center
        margin 20px 0 15px 0
        position relative
        &::before,
        &::after
          content ''
          height 1px
          width 30%
          position absolute
          background-color #E8E8E8
          left 0
          top 50%;
        &::after
          right 0
          left auto
    .certificate
      &-icons
        display flex
        justify-content space-around
      &-icon
        img
          width 17px
    .company-tip
      display: flex
      justify-content: space-between
      align-items: center
      margin-top: 26px
      .company-shop
        width: 88px
        height: 32px
        line-height 32px
        border-radius: 2px
        text-align: center
        color: #fff
        font-size: 14px
      .company-product
        width: 88px
        height: 32px
        line-height 32px
        text-align: center
        font-size: 14px
        color: #333333
        border: 1px solid #EFEFEF;
        border-radius: 2px;
        background: #F7F7F7;
        &:hover
          font-weight: bold