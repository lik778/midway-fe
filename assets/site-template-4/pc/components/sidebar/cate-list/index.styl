.sidebar
 .product-contanier
    display: flex
    flex-direction: column
    justify-content: center
    align-items: flex-start
    width 100%
    margin-bottom: 20px
    .product-catogeries-cate
      display flex
      flex-direction column
      justify-content flex-start
      align-items center
      width: 222px
      background-color #fff
      border-radius: 4px 4px 0px 0px;
      margin-right: 0
      border: 1px solid #efefef;
      border-bottom: transparent;
      a
        box-sizing: border-box
        position relative
        display block
        padding 20px 0
        text-align left
        font-size 16px
        width: 175px
        color #5D5D5D
        vertical-align middle
        // border-bottom: 1px dotted #D4D4D4
        &:last-child
          border-bottom: transparent
        &:hover
           font-weight: bold
        .firstIcon
          display: none
          position absolute
          top: 20px
          right: 0
          width: 23px
          height: 23px
      .all-cateList-container
        position relative
        box-sizing: border-box
        // scrollbar-width: none; /* 火狐浏览器 */
        // -ms-overflow-style: none; /* IE浏览器 */
        width: 100%
        max-height: 341px
        overflow-x: hidden
        overflow-y: auto
        // &::-webkit-scrollbar
        //   display: none
        &::-webkit-scrollbar
          background-color: #fff;
        &::-webkit-scrollbar-thumb
          background-color: #E6E6E6
          // border-radius: 9px;
          // border: 3px solid transparent;
        .border-bot
          margin 0 auto
          width 175px
          height 0
          border-top 1px dashed #D4D4D4
        .cateList
          margin-left: 24px
      .all-category
        box-sizing: border-box
        display: inline-block
        width: 100%
        padding 17px 20px
        color #FFFFFF
        font-size 18px
        font-weight 500
        border-radius 4px 4px 0 0
      &:last-child
        width 0
        border 0
    .last-contacts
      display: inline-block
      box-sizing: border-box
      display: flex
      flex-direction: column
      justify-content: space-between
      align-items: center
      width: 223px
      height: 76px
      padding: 15px 0 9px 0
      cursor pointer
      .last-contact-top
        display: flex
        justify-content: center
        .top1
          width: 120px
          height: 13px
      .last-contact-middle
        font-weight: bold;
        color: #FFFFFF
        font-size: 22px;
      .last-contact-bottom
        font-size: 22px
        width: 22px
        height: 22px
        background: url('//file.baixing.net/202205/3914beb9882f88baa6612f5999ca053a.png') no-repeat center center/100%
