.sidebar
  //侧边栏产品推荐轮播图样式设置
  #product-swiper
    padding-bottom 30px
    position relative
    .swiper-wrapper
      height auto
    .swiper-pagination
      position absolute
      left 50%
      bottom 10px
      transform translateX(-50%)
      .swiper-pagination-bullet
        width 16px
        height 3px
        border-radius 0
        margin 0 5px
  .side-products
    a.side-product
      display block
      width 189px
      border 1px solid transparent
      margin-top 10px
      &:hover
        border-color #f7f7f7
      .product-img
        position relative
        img
          width 100%
          height 128px
        &.video
          &::after
            content ''
            position absolute
            left 50%
            top 50%
            width 40px
            height 40px
            transform: translate(-50%,-50%)
            background url("data:image/png;base64,")
            background-size 100%
            cursor pointer
      .product-desc
        width 100%
        background-color #F7F7F7
        padding 15px 0
        p
          box-sizing: border-box
          font-size 12px
          margin 0 13px
          width calc(100% - 26px)
          color #5D5D5D
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-box-orient vertical
          -webkit-line-clamp 2
          word-break break-all

