.newsSwiper
  overflow hidden
  height: 363px
.newDetails
  width: 100%
  background: #fff
  #contactFormBox
    overflow hidden
    width: 100%
    padding-bottom: 72px
    margin-top: 40px
    .block-title
      margin-top: 54px
      .h2
        color: #fff
        margin-left 15px
.container
    width 1220px
    margin 0 auto
    display flex
.block-title
  margin 40 auto 41px
  position relative
  text-align center
  .h2
    display inline-block
    margin-bottom: 16px
    font-size 34px
    text-align center
    color #212121
    font-weight bold
  .point
    position absolute
    bottom: 0
    left: 50%
    transform: translateX(-107px)
    width: 214px
    height: 2px
    margin-top: 16px
    background-color: #EBEBEB
    .tipMiddle
      position absolute
      top: 0
      left: 50%
      transform: translateX(-12px)
      width 24px
      height 3px
      background: #336FFF
//主体区块新闻资讯样式
.news-detail
    width: 100%
    margin-right: 20px
    .news
        &-content
            width: 100%
            background-color #fff
            padding 0 30px
            box-sizing border-box
            border-radius: 4px;
            border: 1px solid #EFEFEF;

            &__pic
                text-align center
                margin 40px auto
                img
                    max-width 100%

            &__text
                height: auto
                color #333333
                line-height 28px
                font-size 16px
                padding 30px 0
                word-break break-all
            &__tags
                margin-top 30px
                span
                    background #F2F2F2
                    margin-right 20px
                    font-size 14px
                    color #666666
                    padding 0 15px
                    height 32px
                    line-height 32px
                    display inline-block
        &-title
            padding 30px 0
            text-align center
            border-bottom 1px dashed #EAEAEA
            &__text
                font-size 32px
                margin-bottom 15px
            &__date
                color #333
        &-page
          box-sizing: border-box
          display: flex
          justify-content: center
          align-items: center
          width: 100%
          height: 72px
          margin-top: 20px
          padding-left: 46px
          border-radius: 4px;
          border: 1px solid #EFEFEF;
        &-nav
            background-color #fff
            display flex
            justify-content space-between
            &__pre,
            &__next
              display flex
              width: 450px
              span
                  margin-right 5px
              a
                color #333333
                max-width 80%
                display inline-block




