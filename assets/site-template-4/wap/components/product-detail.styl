.product-detail
  .pro-top
    background-color #ffffff
    img
      display block
      margin auto
      width 100%
      height 286px
    .pro-meta
      padding 16px
      h3
        font-size 18px
        font-weight bold
        line-height 30px
      p
        margin-top 16px
        font-size 14px
        color #666
        > span
          color #333333
          &.pro-meta-price
            color #FF6600
  .pro-bottom
    margin-top 16px
    background-color #fff
    .pro-title
      position relative
      padding 16px 9px
      border-bottom 1px solid #f2f2f2
      margin 0 12px 14px
      > h4
        font bold 16px/16px PingFangSC-Regular, PingFang SC
      .prefix-box
        position absolute
        top 16px
        left 0
        width 3px
        height 16px
        background #336FFF
    .pro-pic
      text-align center
      padding-bottom 30px
      img
        max-width 290px
    .pro-content
      height: auto
      background-color #ffffff
      padding 0 20px 15px
      font-size 14px
      line-height 24px
      word-break break-word
      img
        max-width 290px

.product-detail
  .video-con
    position relative
    margin auto
    width 100%
    height 66vw
  .video-wrapper
    display flex
    justify-content center
    align-items center
    width 100%
    height 100%
    background-color black
    video
      flex 1
      width 100%
      height 100%
      cursor pointer
      z-index 9
  .video-cover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 9
    cursor pointer
    img
      width 100%
      height 100%
  .video-cover::after
    content ''
    position absolute
    left calc(50% - 28px)
    top calc(50% - 28px)
    width 55px
    height 55px
    background url("data:image/png;base64,")
    background-size 100%
    cursor pointer
