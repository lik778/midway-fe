.nav-container
  position relative
  background: #fff
  box-shadow: 0px 3px 10px 0px rgba(0,0,0,0.07);
  *
    box-sizing: border-box
  .trigger
    display: flex
    justify-content: center
    align-items: center
    width: 44px
    height: 53px
    position: absolute
    right: 0
    top 0
    background: linear-gradient(to right,rgba(255,255,255,0),rgba(255,255,255,0.8) 20%,rgba(255,255,255,1) 100%);
    .icon,.icon-active
      width: 16px
      height: 16px
    .icon
      display: block
    .icon-active
      display: none
    &.active
      .icon
        display: none
      .icon-active
        display: block

.nav-content,.nav-all
  width 100vw
  .nav-item
    min-width calc(calc(100vw - 36px) / 4)
    display: inline-block
    padding: 0 10px
    .nav-item-content
      box-sizing border-box
      color #666
      line-height 53px
      text-align: center
      font-size 14px
      &.active
        font-size 16px
        font-weight bold
        color #336FFF
.nav-content
  box-sizing: border-box
  padding: 0 60px 0 0
  overflow-x: auto
  white-space: nowrap
  border-bottom: 1px solid #f5f5f5
  .nav-item .nav-item-content
    font-size: 16px
    border-bottom: 3px solid transparent
    &.active
      border-bottom-color #336FFF
.nav-all
  height: 0
  opacity: 0
  transition: height 0.5s ,opacity 0.2s
  padding: 0 8px
  .nav-item
    .nav-item-content
      line-height: 44px
  &.active
    padding: 15px 8px
    opacity: 1
    height: auto
    color #336FFF

