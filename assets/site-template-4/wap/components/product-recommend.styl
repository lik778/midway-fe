.product-recommend
  margin 10px 0
  background-color #fff

  .pro-title
    position relative
    padding 16px 9px
    border-bottom 1px solid #f2f2f2
    margin 0 12px 14px

    > h4
      font bold 16px / 16px PingFangSC-Regular, PingFang SC

    .prefix-box
      position absolute
      top 16px
      left 0
      width 3px
      height 15px
      background #336FFF

  .pro-box
    display flex
    flex-wrap nowrap
    overflow-x auto
    padding 0 16px
    box-sizing border-box

    &::-webkit-scrollbar
      display none

    .pro-box-product
      display block
      width 140px
      margin-right 20px
      position relative
      box-sizing border-box

      &.video
        &::after
          content ''
          position absolute
          left 50%
          top 20%
          width 40px
          height 40px
          transform: translateX(-50%)
          background url("data:image/png;base64,")
          background-size 100%
          cursor pointer

      img
        overflow hidden
        height 92px
        width 138px
        border 1px solid #eee
        border-radius 3px

      .pro-desc
        margin-top 10px
        font-size 14px
        color #666
        margin-bottom 20px
        line-height 22px
