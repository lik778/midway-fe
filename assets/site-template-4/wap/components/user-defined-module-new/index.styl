.user-defined-item
  margin 0 0 16px
  border-radius: 4px;
  background-color: #fff
  overflow hidden

  .img
    width: 100%
    height: 131px

  .content
    padding: 15px 0

    .title
      margin-bottom 10px
      font-size: 14px;
      font-weight: bold;
      color: #336FFF;
      line-height: 14px;

    .line
      width: 24px
      height: 2px
      margin-bottom 12px
      background: #336FFF

    .desc
      font-size: 12px
      color: #666666
      line-height: 16px
