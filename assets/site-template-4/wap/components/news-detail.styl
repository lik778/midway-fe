.news-detail
    background-color #fff
    padding 16px 0
    h3
        font bold 18px/30px PingFangSC-Medium, PingFang SC
        padding 0 16px
    .news-detail-time
        font-size 12px
        color #666666
        margin 9px 0 24px
        padding 0 16px
    .news-detail-pic
        margin-bottom 30px
        img
            width 100%
    .news-detail-content
        height: auto
        font-size 14px
        line-height 24px
        color #333
        word-break break-word
        margin-bottom 29px
        img
          width: 100%
    .news-nav
        font-size 14px
        border-top 1px solid #EBEBEB
        padding 0 16px
        span
            display inline-block
            color #336FFF
            margin-top 24px
        a
            color #666666

