.user-defined-module
    padding: 20px 15px 0px
    background-color: #fff
    margin-top: 10px
    .block-title-box
        display: flex
        justify-content: center
        align-content: center
        .block-title
            position: relative
            margin: 0 auto
    .user-defined-list
        border-top 1px solid #e2e2e2
        margin-top: 15px
        display flex
        flex-wrap wrap
        justify-content center
        .user-defined-item
            width: 40%
            padding : 15px 12px 20px
            border-bottom: 1px solid #F2F2F2
            position: relative
            &:nth-child(odd)
                border-right: 1px solid #F2F2F2
            &:nth-child(even)
                padding-left: 17px
            &:nth-last-child(2)
                border-bottom: 1px solid #fff
            &:last-child
                border-bottom: 1px solid #fff
            .number
                display inline-block
                font-size: 36px
                color: #E2242E
                font-weight: 100;
                min-width 42px
            .title
                font-size: 14px
                font-weight: bold
                position: relative
                left: 5px
                bottom: 3px
            .content
                font-size: 12px
                color: #666
                padding-top: 2px
            a
                display inline-block
                width: 100px
                height: 30px
                border: 1px solid #CCCCCC
                font-size: 10px
                font-weight: bold
                line-height: 28px
                text-align: center
                position: absolute
                top: 50%
                left: 50%
                transform: translate(-50%, -50%);
                color: #333
        
        
            