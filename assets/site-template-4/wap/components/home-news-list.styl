@import "./no-data"

.news-list
  padding 0 12px
  background-color #fff
  margin-bottom 10px
  .item
    display flex
    box-sizing border-box
    justify-content space-between
    align-items center
    padding 11px 4px
    border-bottom 1px solid rgba(235, 235, 235, 1)
    .left
      width 50px
      text-align center
      .day
        margin-bottom 8px
        font-size 20px
        font-weight bold
        color #666666
        line-height 20px
      .year-month
        font-size 12px
        color #999999
    .right
      width 70%
      margin-left 14px
      .title
        margin-bottom 12px
        font-size 14px
        font-weight bold
        color #333333
        line-height 14px
      .desc
        text-overflow: ellipsis;
        font-size 14px
        line-height 14px
        color #999999
