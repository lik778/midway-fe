@import "./no-data"

.one-line
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

.news-list
  padding 0 12px
  background-color #fff
  margin-bottom 10px
  .item
    display flex
    box-sizing border-box
    align-items center
    padding 11px 4px
    border-bottom 1px solid rgba(235, 235, 235, 1)
    .left
      display flex
      flex-direction column
      justify-content center
      align-items center
      width 56px
      height 56px
      border-radius 0 0 16px 0
      .day
        margin-bottom 2px
        font-size 20px
        font-weight bold
        color #666666
        line-height 20px
      .year-month
        font-size 12px
        color #999999
    .right
      width 75%
      margin-left 14px
      .title
        margin-bottom 12px
        font-size 14px
        font-weight bold
        color #333333
        line-height 14px
      .desc
        font-size 14px
        line-height 14px
        color #999999
