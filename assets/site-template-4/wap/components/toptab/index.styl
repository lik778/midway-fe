.tab-header
  width 100%
  background-color #ffffff
  font-size 16px
  font-weight 600
  position relative

  .sample
    display flex
    align-items center
    //实现横向滚动
    flex-flow nowrap
    overflow-x auto
    margin 0 12px
    height 48px
    border-top 1px solid #f2f2f2
    //去除滚动条

    &::-webkit-scrollbar
      display none

    a
      display inline-block
      margin-right 15px
      color #666

  p
    font-size 12px
    white-space nowrap
    padding 8px 10px

  img
    display inline-block
    width 16px
    height 16px
    padding 16px 14px
    position absolute
    right 0
    top 1px

//弹窗
.all
  display none
  background-color #fff
  position fixed
  top 0
  right 0
  width 70%
  height 100%
  z-index 11
  padding 30px 20px
  .tag-lay
    display block
    margin-bottom 16px
    font 14px/14px PingFangSC-Regular, PingFang SC
    color #333333
    &.allTag
      margin-top 20px
  a
    display inline-block
    margin-right 15px
    background-color #f2f2f2
    border-radius 17px
    margin-bottom 15px
    color #666

    p
      font-size 12px
      padding 8px 10px

  .btn
    width 100%
    text-align center

    button
      width 80%
      margin 0 auto
      height 40px
      background-color #fff
      border 1px solid #F58C91
      color #EC2525
      margin-top 30px
      font-size 14px


.tab-header .sample a > p, .all a > p
  &.active
    border-radius 999px
    background #EAF1FF
    color #336FFF


//遮罩
.mask
  display none
  position fixed
  left 0
  top 0
  z-index 10
  width 100%
  height 100%
  background #000
  opacity .6
  -webkit-tap-highlight-color transparent



