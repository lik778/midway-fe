.news-list
  width 100%
  margin-top 10px
  padding-bottom 13px
  background-color #fff

  h3
    font bold 14px/1 PingFangSC-Medium, PingFang SC
  a
    display block
    font-size 14px
    border-bottom 1px solid #EBEBEB
    padding 18px 16px

    &:last-child
      border-bottom none

    p
      font-size 14px
      color #666666

    > .text
      color #666
      position relative
      padding-right 15px
      margin 12px 0

      &::after
        content ""
        width 8px
        height 8px
        border 1px solid #666
        border-left none
        border-bottom none
        transform rotate(45deg)
        position absolute
        top calc(50% - 5px)
        right 3px

