@import "../drawer-nav"

.header
	padding 0 18px
	display flex
	align-items center
	justify-content space-between
	box-sizing content-box
	position relative
	height 56px
	background-color #fff
	.header-left
		display flex
		justify-content flex-start
		align-items center
		.baixing-logo
			width 49px
			height 24px
			transform  translateY(3px)
		.header-tip-text
			font-size 16px
			color #555
			font-weight bold

	.detail-page
		width 100%
		padding 9px
		display flex
		justify-content space-between
		align-items center
		.back-icon
			width 8px
			height 8px
			border-top 2px solid #000
			border-right 2px solid #000
			transform rotate(-135deg)
		.title
			width 180px
			margin 0 auto
			text-align center
		a > img
			width 18px
			height 18px