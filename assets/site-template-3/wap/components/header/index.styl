@import "../drawer-nav"

@keyframes navTitleAnimate {
	0% {
		transform translateX(100%)
	}

	100% {
		transform translateX(-100%)
	}
}

.header
	padding 0 17px 0 12px
	display flex
	align-items center
	justify-content space-between
	box-sizing content-box
	position relative
	height 56px
	background #FFFFFF
	.nav-select-box
		margin-right 20px
	&-name
		font-weight bold
		color #333
		font-size 16px
		white-space nowrap; 
		margin  0 4px 0 10px
	&-logo
		width 34px
		height 34px
		background-size contain
		background-repeat no-repeat;
		background-position center center
		flex-shrink 0
	&-certificate
		height 19px
		width 19px
		background-size cover
		position relative
		flex-shrink 0
	.detailPage
		width 100% 
		padding 0 9px
		display flex
		align-items center
		justify-content space-between
		.back-icon
			width 8px
			height 8px
			margin-left 5px
			border-top 2px solid #000
			border-right 2px solid #000
			transform rotate(-135deg)
		.title
			width 180px
			text-align center
			line-height 56px
			font-size 16px
		a > img 
			width 18px
			height 18px
	.baixing-logo
		width 37px
		height 18px
	.content-box
			max-width calc(100% - 112px)
			flex-grow 1
			height 100%
			display flex
			justify-content center
			align-items center
			.header-name-box
				display flex
				justify-content center
				align-items center
				flex-wrap nowrap
				overflow hidden
				&.animate
					width calc(100% - 70px)
					justify-content start
					.header-name
						display inline-block
						animation navTitleAnimate 5s linear 0s infinite