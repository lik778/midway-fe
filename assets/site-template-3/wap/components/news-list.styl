.news-list
    box-sizing border-box
    padding 0 16px
    background-color #fff
    margin-bottom 15px
    .item
        display flex
        justify-content space-between
        align-items flex-start
        padding 24px 0 16px
        &+.item
            border-top 1px solid #F3F3F3
        .left
            width 50px
            .day
                margin-bottom 8px
                font-size 20px
                font-weight 500
                color #666666
                line-height 20px
            .year-month
                font-size 12px
                color #999999
                line-height 12px
        .right
            width calc(100% - 66px)
            .title
                margin-bottom 16px
                font-size 14px
                font-weight 600
                color #333333
                line-height 14px
            .desc
                min-height 32px
                font-size 12px
                color #999999
                line-height 18px
