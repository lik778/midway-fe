.contact-us-form
  padding 0 15px 10px
  background-color #fff
  .a-content-item
    display: flex
    justify-content: flex-start
    align-items: center
    width: 100%
    margin-bottom  20px
    .item-label
      position relative
      display: flex
      justify-content: flex-start
      align-items: center
      width: 23%
      font-weight bold
      color #333333
      .labe-icon
        font-size 16px
        color $color-main
    input
      width 100%
      border none
      border-radius 4px
      border 1px solid #E0E0E0
      padding 14px 10px
      margin-left: 10px
      font-size: 14px;
      color: #999999;
      -webkit-appearance: none;
  .form-item
    display: flex
    justify-content: flex-start
    align-items: center
    margin-bottom  20px
    button
      width 100%
      height 50px
      margin-top 10px
      border none
      text-align center
      color #fff
      line-height 50px
      font-weight: bold
      border-radius 25px
      font-size 16px
      background: linear-gradient(167deg, #FFC879 0%, #FF4466 75%, #FF4466 100%);
      letter-spacing: 2px
