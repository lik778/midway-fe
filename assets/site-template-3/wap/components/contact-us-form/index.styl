.contact-us-form
  padding 0 15px 20px
  background-color #fff
  .form-item
    display: flex
    justify-content: flex-start
    align-items: center
    margin-bottom  20px
    label
      font-size 14px
      margin-right: 23px
      display inline-block
      font-weight bold
      color #333333
    .form-input
      flex 1
      input
        width 100%
        border none
        border-radius 4px
        border 1px solid #E0E0E0
        padding 14px 10px
        font-size: 14px;
        color: #999999;
    button
      width 100%
      height 50px
      margin-top 10px
      border none
      text-align center
      color #fff
      line-height 50px
      border-radius 25px
      font-size 16px
      background: linear-gradient(167deg, #FFC879 0%, #FF4466 75%, #FF4466 100%);
    &.required
      label
        position relative
        &::after
          content '*'
          position absolute
          right -15px
          font-size 16px
          color $color-main
