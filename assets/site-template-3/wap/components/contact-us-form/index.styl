.contact-us-form
  padding 0 32px 20px
  background-color #fff
  .form-item
    margin-bottom:  20px
    label
      font-size 14px
      margin-bottom 12px
      display inline-block
      font-weight: bold;
      color: #333333;
    .form-input
      input
        width 100%
        border none
        border-radius: 4px;
        border: 1px solid #E0E0E0;
        padding 14px 10px
    button
      border none
      background-color #FF6536
      text-align center
      color #fff
      width 100%
      height 44px
      line-height 44px
      border-radius: 22px
      margin-top 4px
      font-size 16px
    &.required
      label
        position relative
        &::after
          content '*'
          position absolute
          right -15px
          font-size 16px
          color #FF6536
