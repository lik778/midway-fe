.product-recommend
		margin 10px 0
		background-color #fff
		.pro-title
				padding 20px 16px 14px
				height 18px
				line-height 18px
				border-bottom 1px solid #f2f2f2
				margin-bottom 14px
				display flex
				align-items flex-end
				div
						width 3px
						height 14px
						margin-right 5px
						background $color-main
		.pro-box
				display flex
				flex-wrap nowrap
				overflow-x auto
				padding 0 16px
				box-sizing border-box
				&::-webkit-scrollbar
						display none
				.pro-box-product
						display block
						width 140px
						margin-right 20px
						position relative
						box-sizing border-box
						&.video
								&::after
										content ''
										position absolute
										left 50%
										top 17%
										width 40px
										height 40px
										transform: translateX(-50%)
										background url("data:image/png;base64,")
										background-size 100%
										cursor pointer
						img
								height 92px
								width 138px
								border 1px solid #eee
						.pro-desc
								margin-top 10px
								font-size 14px
								color #666
								margin-bottom 20px
								line-height 22px
