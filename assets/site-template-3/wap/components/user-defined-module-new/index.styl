.user-defined-module-container
  padding: 0 15px 10px
  .module-title
    margin:  22px 0 20px
    position relative
    text-align: center
    font-size: 20px;
    font-weight: bold;
    color: #333333;
    line-height: 20px;
    &::after
      content ''
      display: block
      width: 80px
      height: 8px
      position: absolute
      left: 50%
      top: 65%
      transform: translateX(-50%)
      background-color: rgba(#FFDEE1,.9) 
      z-index -1
  .user-defined-item
    margin-bottom 10px
    border-radius: 4px;
    background-color: #fff
    overflow hidden
    .img
      width: 100%
      height: 124px
      border-radius: 4px;
    .content
      padding: 15px 20px
      .title
        margin-bottom 10px
        font-size: 16px;
        font-weight: bold;
        color: #333333;
        line-height: 16px;
      .line
        width: 24px
        height: 2px
        margin-bottom 10px
        background-color: #DDDDDD
      .desc
        font-size: 14px;
        color: #666666;
        line-height: 20px;