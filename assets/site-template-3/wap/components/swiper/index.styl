@import 'swiper/dist/css/swiper.min.css'

.swiper-container
  height 152px
  width 100vw
  .swiper-wrapper
    .swiper-slide
      text-align center
      background-size 100% 100%
      background-position center
      background-repeat no-repeat
      display flex
      justify-content center
      align-items center
  .swiper-pagination-bullet-active
    background-color $color-main
  .num-tip
    height: 26px;
    padding: 0 5px
    position: absolute
    bottom: 16px
    right: 16px
    line-height: 26px
    background: rgba(#000000,0.5)
    color #fff
    border-radius: 4px;
    z-index 1000
    font-size: 12px;

/* 轮播视频 */
.swiper-container-small,
.swiper-container
  .video-wrapper
    display flex
    justify-content center
    align-items center
    width 100%
    height auto
    background-color black
    video
      flex 1
      max-width 100%
      max-height 100%
      cursor pointer
      z-index 9
  .video-cover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 9
    cursor pointer
    img
      width 100%
      height 100%
      object-fit cover
  .video-cover::after
    content ''
    position absolute
    left calc(50% - 28px)
    top calc(50% - 28px)
    width 55px
    height 55px
    background url("data:image/png;base64,")
    background-size 100%
    cursor pointer

/* 轮播全屏 */
.swiper-container.fullscreen {
  position: fixed;
  top: 50%;
  left: 0;
  width: 100vw;
  transform: translateY(-50%);
  z-index: 1000;
}
.swiper-container.fullscreen + .swiper-fullscreen-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 110vw;
  height: 300vh;
  background: #000;
  transform: translateY(-150vh);
  z-index: 999;
}

