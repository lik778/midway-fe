.products-con
  display flex
  flex-direction column
  gap 10px
  background white
  *
    box-sizing border-box
  .product
    display flex
    justify-content center
    align-items stretch
    padding 0 10px
    overflow hidden
    &:nth-child(2n) {
      flex-direction: row-reverse;
    }
    &-img
      width 180px
      height 120px
    &-content
      width calc(100% - 180px)
      height 120px
      padding 24px 20px 22px
      position relative
      color #333
      font-size 14px
      background-color #fff
      .taigger
          width 0
          height 0
          position absolute
          top 12px
          border 10px solid transparent
      &.left
        .taigger
          border-left 15px solid #fff
          right 0
          transform translateX(100%)
      &.right
        .taigger
          border-right 15px solid #fff
          left 0
          transform translateX(-100%)
    &-title
      overflow hidden
      white-space nowrap
      text-align center
      text-overflow ellipsis
    &-see-btn
      margin 0 auto
      margin-top 20px
      width 115px
      height 32px
      line-height 30px
      text-align center
      font-size 12px
      color $color-main
      border-radius 16px
      border 1px solid $color-main


