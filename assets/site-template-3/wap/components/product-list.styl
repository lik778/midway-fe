.products
  margin 0 15px 
  *
    box-sizing border-box
  .product
    display flex
    justify-content center
    align-items stretch
    border-radius 8px
    overflow hidden
    &+.product
      margin-top 10px
    &-img
      width 180px
      height 120px
    &-content
      width calc(100% - 180px)
      height 120px
      padding 18px 18px 0 12px
      position relative
      color #333
      font-size 14px
      background-color #fff
      .taigger
          width 0
          height 0
          position absolute
          top 12px
          border 8px solid transparent
      &.left
        .taigger
          border-left 12px solid #fff
          right 0
          transform translateX(100%)
      &.right
        .taigger
          border-right 12px solid #fff
          left 0
          transform translateX(-100%)
    &-title 
      margin-bottom 18px
      white-space nowrap
      text-overflow ellipsis 
      font-size: 16px;
      font-weight: bold;
      color: #333333;
    &-line
      margin-bottom: 10px
      border-bottom 2px dotted rgba(221, 221, 221, 1)
    &-desc
      font-size: 12px;
      color: #666666;
      line-height: 18px;
