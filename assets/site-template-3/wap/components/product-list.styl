.products
  margin 0 15px 20px
  *
    box-sizing border-box
  .product
    display flex
    justify-content center
    align-items stretch
    border-radius 8px
    overflow hidden
    &+.product
      margin-top 10px
    &-img
      width 180px
      height 120px
    &-content
      width calc(100% - 180px)
      height 120px
      padding 24px 20px 22px
      position relative
      color #333
      font-size 14px
      background-color #fff
      .taigger
          width 0
          height 0
          position absolute
          top 12px
          border 10px solid transparent
      &.left
        .taigger
          border-left 15px solid #fff
          right 0
          transform translateX(100%)
      &.right
        .taigger
          border-right 15px solid #fff
          left 0
          transform translateX(-100%)
    &-title
      margin-bottom 30px
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
    &-see-btn
      width 115px
      height 32px
      margin 0 auto
      line-height 30px
      text-align center
      font-size 12px
      color $color-main
      border-radius 16px
      border 1px solid $color-main
