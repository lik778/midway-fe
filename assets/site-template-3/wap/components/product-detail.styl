.product-detail
	.pro-top
		background-color #ffffff
		img
			width 100%
			height 66vw
			display block
			margin auto
		.pro-meta
			padding 26px 16px
			h3
				margin-bottom 24px
				font-size 18px
			p
				margin-top 12px
				font-size 14px
				color #666
	.pro-bottom
		margin-top 16px
		background-color #fff
		.pro-title
			padding 20px 16px 14px
			height 18px
			line-height 18px
			border-bottom 1px solid #f2f2f2
			margin-bottom 14px
			display flex
			align-items flex-end
			div
				width 3px
				height 14px
				margin-right 5px
				background $color-main
		.pro-pic
			text-align center
			padding-bottom 30px
			img
				max-width 290px
	.pro-content
		height: auto
		background-color #ffffff
		padding 0 13px 15px 13px
		font-size 14px
		line-height 24px
		word-break break-word
		img
			max-width 290px

.product-detail
	.video-con
		position relative
		margin auto
		width 100%
		height 66vw
	.video-wrapper
		display flex
		justify-content center
		align-items center
		width 100%
		height 100%
		background-color black
		video
			flex 1
			width 100%
			height 100%
			cursor pointer
			z-index 9
	.video-cover
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 9
		cursor pointer
		img
			width 100%
			height 100%
	.video-cover::after
		content ''
		position absolute
		left calc(50% - 28px)
		top calc(50% - 28px)
		width 55px
		height 55px
		background url("data:image/png;base64,")
		background-size 100%
		cursor pointer
