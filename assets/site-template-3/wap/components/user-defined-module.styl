.user-defined-module
		.user-defined-list
				display flex
				flex-wrap wrap
				justify-content center
				padding 0 20px
				margin-bottom 40px
				background-color #fff
				.user-defined-item
						width 42%
						padding 15px 0 20px
						border-bottom 1px solid #F2F2F2
						display inline
						&:nth-child(odd)
								border-right 1px solid #F2F2F2
								padding-right 22px
						&:nth-child(even)
								padding-left 24px
						&:nth-last-child(2)
								border-bottom 1px solid #fff
						&:last-child
								border-bottom 1px solid #fff
						.number
								display inline-block
								font-size 36px
								color #FF6536
								font-weight 100;
								min-width 42px
						.title
								display inline-block
								font-size 14px
								font-weight bold
								transform translate(0,-3px)
						.content
								font-size 12px
								color #666
								padding-top 2px
								line-height 19px
								word-break break-all
						a
								display inline-block
								width 100px
								height 30px
								border 1px solid #CCCCCC
								font-size 10px
								font-weight bold
								line-height 28px
								text-align center
								color #333
				.viewMore
							display flex
							align-items center
							justify-content center