.contact-form
  background-color #fff
  .block-title
    padding 20px 15px
    border-bottom 1px solid #e2e2e2
  .contact-form-list
    padding 30px 15px 10px
    .a-content-item
      display: flex
      justify-content: flex-start
      align-items: center
      width: 100%
      margin-bottom  20px
      .item-label
        display: flex
        justify-content: flex-start
        align-items: center
        width: 23%
        font-weight bold
        color #333333
        .labe-icon
          font-size 16px
          color $color-main
      input
        width 100%
        border none
        border-radius 4px
        padding 14px 10px
        margin-left: 10px
        font-size: 14px;
        color: #999999;
        background-color: #F7F7F7
        -webkit-appearance: none;
    .form-item
      display: flex
      justify-content: flex-start
      align-items: flex-start
      margin-bottom  20px
      button
        width 100%
        height 50px
        margin-top 10px
        border none
        text-align center
        color #fff
        line-height 50px
        border-radius 25px
        font-size 16px
        background: linear-gradient(167deg, #FFC879 0%, #FF4466 75%, #FF4466 100%);
        font-weight: bold
        letter-spacing: 2px
