@import "../../../../common/pc/contact-form"

.lz
  border-radius: 4px
  &__subtitle
    font-size 16px
    color #333333
    margin 30px 30px
    font-weight bold
  &__contact-us
    background-color #fff
    padding 30px 30px
    display flex
    border: 1px solid #EEEEEE
    .contact-form
      width 530px
      flex 1
      background: #FFFFFF
      .a-container
        justify-content: flex-start
        padding: 15px 0 0
        .a-content
          flex-direction: row
          flex-wrap: wrap
          .a-content-items
            flex-direction: column
            align-items: flex-start
            width: 45%
            &:nth-child(2n+1)
              margin-right: 40px
            .items-label
                margin: 0 0 8px 4px
          .a-content-item
            width: 45%
            &:nth-child(2n+1)
              margin-right: 10%
            .item-label
              margin: 0 0 8px 4px
          .a-button
            width: 45%
            margin-left: 4px
.company 
  &-info
    width: 256px
    padding 15px 70px 0 
    font-size 14px
    color #333333
    .info-label
      font-weight 600
    .info-item
      margin 20px 0
      display flex
      span:first-child
        color #999999
        margin-right 15px
        min-width 70px
        display inline-block
      .view-phone
        margin-left 10px
        color #FF2D38
        &:hover
          cursor pointer
      .hide
        display none


