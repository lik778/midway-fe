@import 'swiper/dist/css/swiper.min.css'

#banner-list
  .swiper-container
    height 360px
    width 100%
    .swiper-wrapper
      .swiper-slide
        img
          height 360px
          width 100%

    .swiper-button-prev
      width 50px
      height 50px
      background url(//file.baixing.net/202105/05348a4efc053232fdd668940bd756a8.png) no-repeat center center/100%
      &:hover
        background url(//file.baixing.net/202105/bc35d271f850e6c00c200564967f94e9.png) no-repeat center center/100%
        transform rotate(180deg)

    .swiper-button-next
      width 50px
      height 50px
      background url(//file.baixing.net/202105/05348a4efc053232fdd668940bd756a8.png) no-repeat center center/100%
      transform rotate(180deg)
      &:hover
        background url(//file.baixing.net/202105/bc35d271f850e6c00c200564967f94e9.png) no-repeat center center/100%
        transform rotate(0)
