@import 'swiper/dist/css/swiper.min.css'

#banner-list
  .swiper-container
    width 100%
    .swiper-wrapper
      .swiper-slide
        position relative
        img
          width 100%
          height 100%
          object-fit cover

    .swiper-pagination-bullet-active
        background $color-main

    .swiper-button-prev
      left 4%
      width 50px
      height 50px
      background url(//file.baixing.net/202105/05348a4efc053232fdd668940bd756a8.png) no-repeat center center/100%
      &:hover
        background url(//file.baixing.net/202105/4ec4c9301b4dfdddcabc6f00c51d541d.png) no-repeat center center/100%
        transform rotate(180deg)

    .swiper-button-next
      right 4%
      width 50px
      height 50px
      top 50%
      background url(//file.baixing.net/202105/05348a4efc053232fdd668940bd756a8.png) no-repeat center center/100%
      transform rotate(180deg)
      &:hover
        background url(//file.baixing.net/202105/4ec4c9301b4dfdddcabc6f00c51d541d.png) no-repeat center center/100%
        transform rotate(0)

/* 轮播视频 */
#banner-list
  .video-wrapper
    display flex
    justify-content center
    align-items center
    width 100%
    height 100%
    background-color black
    video
      max-width 100%
      heigh 100%
      cursor pointer
      z-index 9
  .video-cover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 9
    cursor pointer
    img
      width 100%
      height 100%
      object-fit cover
  .video-cover::after
    content ''
    position absolute
    left calc(50% - 28px)
    top calc(50% - 28px)
    width 55px
    height 55px
    background url("data:image/png;base64,")
    background-size 100%
    cursor pointer