@import 'swiper/dist/css/swiper.min.css'

#banner-list
  .swiper-container
    width 100%
    .swiper-wrapper
      .swiper-slide
        width: 100%
        height: 28.125vw
        min-height: 343.125px
        position relative
        img
          width 100%
          height 100%

    .swiper-pagination-bullet
      width 24px
      height 2px
      opacity .3
      border-radius 0
    .swiper-pagination-bullet-active
      height 4px
      background #fff
      opacity 1.0 
    .swiper-button-prev
      left 4%
      width 50px
      height 50px
      background url(//file.baixing.net/202105/05348a4efc053232fdd668940bd756a8.png) no-repeat center center/100%
      &:hover
        background url(//file.baixing.net/202108/a74c1d873881392c12a23826cd4e1a37) no-repeat center center/100%
        transform rotate(0)

    .swiper-button-next
      right 4%
      width 50px
      height 50px
      top 50%
      background url(//file.baixing.net/202105/05348a4efc053232fdd668940bd756a8.png) no-repeat center center/100%
      transform rotate(180deg)
      &:hover
        background url(//file.baixing.net/202108/af2916a86a85a940625a4a47c70d5fb3) no-repeat center center/100%
        transform rotate(0)

/* 轮播视频 */
#banner-list
  .video-wrapper
    display flex
    justify-content center
    align-items center
    width 100%
    height 100%
    background-color black
    video
      flex 1
      width 100%
      height 100%
      cursor pointer
      z-index 9
  .video-cover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 9
    cursor pointer
    img
      width 100%
      height 100%
  .video-cover::after
    content ''
    position absolute
    left calc(50% - 28px)
    top calc(50% - 28px)
    width 55px
    height 55px
    background url("data:image/png;base64,")
    background-size 100%
    cursor pointer