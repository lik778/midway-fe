@import 'swiper/dist/css/swiper.min.css'
  @import "../../../../../common/pc/official-400-btn";
.my-slide-active
  border: 1px solid #ED4646
.media-show-container
  display: flex
  justify-content space-between
  height: 376px
  padding: 10px 0 0px 0
  margin-bottom 20px
  background-color: #FFFFFF
  .media-show-left
    width: 406px
    .left-headImg
      margin-bottom: 20px
      border-radius: 4px
      overflow hidden
      .video-con
        position relative
        height 270px
        width 406px
        flex-shrink 0
      .video-wrapper
        display flex
        justify-content center
        align-items center
        width 100%
        height 100%
        background-color black
        video
          flex 1
          width 100%
          height 100%
          cursor pointer
          z-index 9
      .video-cover
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index 9
        cursor pointer
        img
          width 100%
          height 100%
      .video-cover::after
        content ''
        position absolute
        left calc(50% - 28px)
        top calc(50% - 28px)
        width 55px
        height 55px
        background url("data:image/png;base64,")
        background-size 100%
        cursor pointer
      .video-img
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index 9
        // cursor pointer
        img
          width 100%
          height 100%
      .video-cover::after
        content: ''
      img
        height 270px
        width 406px
        border-radius 4px
    .left-contentImg
      width: 100%
      height: 72px
      .swiper-container
        width: 100%
        height: 100%
        .swiper-button-prev
          left: 5px
          width: 30px
          height: 30px
          background: url('http://file.baixing.net/202105/05348a4efc053232fdd668940bd756a8.png') no-repeat center center/100%
          &:hover
            background url(//file.baixing.net/202108/a74c1d873881392c12a23826cd4e1a37) no-repeat center center/100%
            transform rotate(0)
        .swiper-button-next
          right: 5px
          width: 30px
          height: 30px
          background: url('http://file.baixing.net/202105/05348a4efc053232fdd668940bd756a8.png') no-repeat center center/100%
          transform: rotate(180deg)
          &:hover
            background url(//file.baixing.net/202108/af2916a86a85a940625a4a47c70d5fb3) no-repeat center center/100%
            transform rotate(0)
        .swiper-slide
          width: 99px
          height: 66px
          margin-right: 10px
          border-radius: 4px
          display: -webkit-box;
          display: -ms-flexbox;
          display: -webkit-flex;
          display: flex;
          -webkit-box-pack: center;
          -ms-flex-pack: center;
          -webkit-justify-content: center;
          justify-content: center;
          -webkit-box-align: center;
          -ms-flex-align: center;
          -webkit-align-items: center;
          align-items: center;
          img 
            width: 100%
            height: 100%
            border-radius: 4px
          video
            width: 100%
            height: 66px
            source
              width: 100%
              height: 66px
      .gallery-thumbs
        .swiper-slide-thumb-active
          border: 1px solid #ED4646
  .media-show-middle
    width: 549px
    margin 15px 20px 0 20px
    .detail-title
      overflow: hidden
      text-overflow:ellipsis
      white-space: nowrap
      margin-bottom 24px
      color: #333333
      font-size: 18px
      font-weight: bold
    .detail-price
      box-sizing: border-box
      display: flex
      justify-content: flex-start
      align-items: center
      padding-left: 16px
      width: 100%
      height: 55px
      background: #FFF8F8
      border-top: 1px solid #F3B5B5
      color: #ED4646
      font-size: 14px
      font-weight: bold
      .prices
        margin-left: 24px
        font-size: 20px
        font-weight: 500px
    .detail-setting
      padding: 24px 0px 12px 16px
      margin-bottom: 0px
      color: #333333 
      font-size: 12px
      .setting-title
        font-size: 14px
        font-weight: bold
        margin-bottom 8px
        text-align: left
      .detail-product 
        ul
          display: flex
          flex-wrap: wrap
          li
            display: flex
            justify-content: flex-start
            width: 248px
            margin-bottom: 15px
            padding-right: 10px
            display: -webkit-box
            -webkit-box-orient: vertical
            -webkit-line-clamp: 1
            overflow: hidden
            .setting-key
              margin-right 20px
              color: #999999
            .setting-value
              color: #333333
    .detail-contact
      display: flex
      justify-content flex-start
      align-items center
      padding-left: 14px
      .online-btn
        display: flex
        justify-content: center
        align-items: center
        width: 140px
        height: 40px
        border: 1px solid #ED4646
        font-size: 14px
        color: #ED4646
        border-radius: 4px
        img 
          width: 20px;
          height: 19px
          margin-right 8px
