.product-recom
	margin-bottom 21px
	.product-recom-title
		margin 0 0 20px 20px
		font-size 16px
		font-weight bold
	.product-recom-list
		width 100%
		display flex
		flex-wrap wrap
		.recommend-item
			display block
			width 230px
			height 230px
			background #fff
			border 1px solid #f7f7f7
			&+.recommend-item
				margin-left 15px
			&:hover
				border 1px solid #ff6536
				p
					display none
				.show-desc
					display block
			.img
				width 100%
				height 154px
			p
				font-size 14px
				color #333
				text-align justify
				margin 20px 15px
				line-height 22px
			.show-desc
				display none
				height 32px
				text-align center
				line-height 32px
				background-color #ff6536
				color #fff
				margin 22px 56px


