@import './cate-list/index.styl'
@import './company-card.styl'
@import './products.styl'

.sidebar
  margin-left 15px
  width 224px
  &-item
    box-shadow 0 4px 10px rgba(#000, 0.02);
    padding 15px
    background-color #fff
    margin-bottom 20px
    &__content
      onverflow hidden
    &__title
      font-size 18px
      color $color-main
      border-bottom 1px solid #ddd
      span
        display inline-block
        padding-bottom 10px
        border-bottom 2px solid $color-main
        margin-bottom -1px