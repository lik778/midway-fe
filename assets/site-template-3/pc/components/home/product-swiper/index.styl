#product-swiper-box
  padding-top 30px
  position relative
  .swiper-wrapper
    height auto
  .swiper-pagination
    position absolute
    left 50%
    bottom 10px
    transform translateX(-50%)
    .swiper-pagination-bullet
      width 16px
      height 3px
      border-radius 0
      margin 0 5px
      &-active
        background #FF2D38
.products
  //width 145px
  a.product
    display block
    width 192px
    border 1px solid transparent
    &:hover
      border-color #f7f7f7
    img
      width 145px
      height 128px
    .product-desc
      width 100%
      background-color #F7F7F7
      padding 15px 0
      p
        font-size 12px
        margin 0 13px
        width calc(100% - 26px)
        color #666
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 2
        word-break break-all

