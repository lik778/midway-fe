#product-swiper-box
  width 1220px
  margin 0 auto 80px
  position relative
  .swiper-wrapper
    height auto
  .products
    height 319px
    a.product
      display block
      width 290px
      float left
      margin-right 20px
      &:nth-child(4n)
        margin-right 0
      img
        width 100%
        height 193px !important
      .product-desc
        height 126px !important
        width 100%
        height 110px
        background-color #F7F7F7
        text-align center
        position relative
        p
          font-size 16px
          padding 22px 10px
          color #666
        .vad-btn
          width 116px
          height 40px
          border 1px solid $color-main
          border-radius 20px
          text-align center
          line-height 40px
          position absolute
          left 50%
          margin-left -58px
          bottom 25px
          color $color-main
      &:hover
        .product-desc
          background-color $color-main
          p
            color #fff
          .vad-btn
            background-color #fff

