.new-center
	width 1220px
	margin auto
	.news-data-box
		display flex
		justify-content space-between
		align-items flex-start
		margin-bottom 40px
		.image-box
			width 525px
			margin-right 65px
			.big-image
				width 525px
				height 280px
				margin-bottom 18px
				background-color #aaa

			.item-card
				font-size 14px
				&:hover
					.item-title
						color #FF2D38
				.item-title-line 
					display: flex
					justify-content: space-between
					align-items: center
					.item-title
						width: 400px 
						margin-bottom 10px
						color #333333
						font-weight 600
					.item-time
						font-size: 14px;
						color: #999999;
						line-height: 14px;
				.item-content
					color #999
					line-height 24px
		.news-box
			flex-grow 1
			box-sizing border-box
			a
				display block
				font-size 14px
				display flex
				align-items center
				padding-bottom 30px
				&+a
					border-top 1px dashed #eaeaea
					padding 30px 0
				&:hover
					.item-card
						.item-title
							color #FF2D38
				.left-img
					width 85px
					padding-right 10px
					.news-date__day
						width 29px
						margin-bottom 16px
						line-height 24px
						font-size 30px
						color #666
					.news-date__year
						line-height 14px
						font-size 14px
						color #666
				.item-card
					width 418px
					.item-title
						width: 400px 
						margin-bottom 10px
						color #333333
						font-weight 600
					.item-content
						color #999
						line-height 24px
	.show-more-btn
		display block
		width 160px
		height 44px
		line-height 44px
		text-align center
		margin 0 auto
		background #FF6536
		border-radius 22px
		font-size 18px
		color #FFFFFF
		border none
		cursor pointer
		.set-color
			color #fff




