#product-list-box
  // display flex
  width 1190px
  margin 0 auto 60px
  position relative
  overflow hidden
  a.product
    display block
    width 290px
    float left
    margin 0 10px 10px 0
    overflow hidden
    border-radius 4px
    &:nth-child(4n)
      margin-right 0
    img
      width 100%
      height 193px
      // border-radius 4px 4px 0 0
    .product-desc
      width 274px
      height 60px
      padding-left 16px
      background-color #F7F7F7
      position relative
      font-size 16px
      color #333333
      line-height 60px
      text-align left
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 1
      -webkit-box-orient vertical
      .vad-btn
        width 116px
        height 40px
        border 1px solid $color-main
        border-radius 20px
        text-align center
        line-height 40px
        position absolute
        left 50%
        margin-left -58px
        bottom 25px
        color $color-main
