#product-list-box
  width 1220px
  margin 0 auto 80px
  position relative
  overflow hidden
  a.product
    display block
    width 290px
    float left
    margin 0 10px 10px 0
    &:nth-child(4n)
      margin-right 0
    img
      width 100%
      height 193px !important
    .product-desc
      width 100%
      height 60px !important
      background-color #F7F7F7
      text-align center
      position relative
      p
        font-size 16px
        padding 22px 16px
        color #333333
        line-height 16px
        text-align left
      .vad-btn
        width 116px
        height 40px
        border 1px solid $color-main
        border-radius 20px
        text-align center
        line-height 40px
        position absolute
        left 50%
        margin-left -58px
        bottom 25px
        color $color-main
