.about-us-bgc
  box-sizing border-box
  width 100%
  position relative
  height 371px
  padding-top 64px
  background url("//file.baixing.net/202108/d116fd196f200736cb1a21ac7c173b7a.png") no-repeat center center/100%
  background-size cover
  margin-bottom 60px
  .about-us-content
    margin 0 auto
    display flex
    justify-content center
    align-items flex-start
    .content-left
      position relative
      width 432px
      height 243px
      border-radius 8px
      overflow hidden
      .img-left
        width 100%
        height 100%
        img
          width 100%
          height 100%
          object-fit: cover
      audio
        width 100%
        height 100%
      .ico-video
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        width 54px
        height 54px
        img
          width 100%
          height 100%
    .content-right
      // height 324px
      display flex  
      flex-direction column
      justify-content flex-start
      padding-left 40px
      .content-right-title
        display flex
        justify-content flex-start
        align-items center
        margin-bottom 19px
        .right-title-left
          display flex
          justify-content center
          align-items center
          img
            width 40px
            height 40px
            margin-right 16px
            border-radius 4px
            overflow hidden
          .left-title
            line-height 20px
            font-size 20px
            font-weight bold
        .right-title-right
          margin-left 16px
          display flex
          .tag
            box-sizing border-box
            padding 4px 8px
            line-height 14px
            text-align center
            border 1px solid #D19960
            border-radius 2px
            color #D19960
            font-size 14px
            margin-right 12px
      .content-right-body
        position relative
        width 654px
        height 120px
        font-size 14px
        .body-content
          color #666666
          line-height 24px
          -webkit-line-clamp 6
          -webkit-box-orient vertical
          display -webkit-box
          overflow hidden
        .view-detail
          display none
          position absolute
          right 45px
          bottom 2px
          color #FF4365
          font-size 14px
      .content-right-bottom
        display flex
        align-items center
        margin-top 32px
        .bottom-left
          display flex
          justify-content center
          align-items center
          img
            width 63px
            height 37px
          .phone
            margin-left 13px
            text-align left
            .active
              font-size 20px
              color #FF4365
              font-weight bold
            .service-hot
              font-size 12px
              color #333333
              font-weight bold
            .service-tel
              font-size 24px
              color #FF4365
              font-weight bold
        .bottom-right
          width 160px
          height 40px
          margin-left 20px
          background-color #FF4466
          border-radius 4px
          color #FFFFFF
          line-height 44px
          font-size 16px
          text-align center