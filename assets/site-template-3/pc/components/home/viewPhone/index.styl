.viewPhone
	width 960px
	height 120px
	margin 0 auto 0
	position relative
	top -40px
	display flex
	flex-direction row
	.viewPhone-left
		width 480px
		background-color #FF6536
		padding 20px 30px 20px 36px
		display flex
		flex-direction row
		justify-content space-between
		.context
			padding-left 3px
			.icon
				display inline-block
				width 32px
				height 26px
				background url("//file.baixing.net/202105/67d77f3dcc1c27ddcb2e135ebddcf746.png")
				background-size cover
				position relative
				top 4px
			.contactName
				display inline-block
				color #fff
				font-size 18px
				margin-left 5px
			.question
				color #FFFFFF
				font-size 14px
			.phone
				display inline-block
				.active
					color #FFFFFF
					font-size 20px
					margin 20px 13px 0
				.no-active
					display none

			.view-all-phone
				color #FFFFFF
				font-size 16px
				display inline-block
				margin-top 20px
		.title
			color #FFFFFF
			border 1px solid #FFFFFF
			writing-mode lr-tb
			width 12px
			height 72px
			font-size 12px
			padding 10px 12px
			line-height 18px
			position relative
			bottom 5px
	.viewPhone-right
		width 460px
		background-color #FFFFFF
		border 1px solid #FF6536
		padding 31px 43px
		display flex
		flex-direction row
		.linian-left
			width 14px
			height 12px
			color #FF6536
			display block
			background-image url('//file.baixing.net/202105/ff24195a79f2fdb731ac59da8e05fbe4.png')
			background-size cover
		.linian-center
			margin 0 46px 0 40px
			.center
				&-first
					color #FF6536
					font-size 14px
					line-height 18px
				&-second
					color #FF6536
					font-size 20px
					margin-top 13px
					font-weight bold
		.linian-right
			width 14px
			height 12px
			color #FF6536
			display block
			background-image url('//file.baixing.net/202105/ff24195a79f2fdb731ac59da8e05fbe4.png')
			background-size cover
			transform rotate(180deg)
			position relative
			top 43px


