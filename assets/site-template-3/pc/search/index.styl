@import "../layout"
@import "../components/breadcrumbs"
@import "../components/product/product-list"
@import "../components/product/cateList"
@import "../components/sidebar/products"
@import "../components/sidebar/index"
@import "../components/base-swiper"

html
    background-color: #F7F7F7
.container
    width 1220px
    margin 0 auto 72px
    display flex
    .main
        width 980px

    .sidebar
        width 224px
        margin-left 15px

.product-child-page
    .search-crumbs
        ul
            li:last-child
                span
                    background: #FFFFFF
                    color: $color-main
                    border: 1px solid $color-main
                    display: inline-block
                    height: 34px
                    line-height: 34px
                    padding: 0 45px 0 15px
                    cursor: pointer
                    position: relative
                    &::after,
                    &::before
                        content: ''
                        width: 15px
                        height: 1px
                        background: $color-main
                        position: absolute
                        right: 15px
                        top: 17px
                        transform: rotate(45deg)
                    &::after
                        transform: rotate(-45deg)


