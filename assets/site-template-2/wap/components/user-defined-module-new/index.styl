.user-defined-item
  margin 0 8px 5px
  border-radius: 4px;
  background-color: #fff
  overflow hidden
  .img
    width: 100%
    height: 124px
    border-radius: 4px;
  .content
    padding: 15px 0
    .title
      margin-bottom 10px
      font-size: 16px;
      font-weight: bold;
      color: #333333;
      line-height: 16px;
    .line
      width: 24px
      height: 2px
      margin-bottom 10px
      background-color: #DDDDDD
    .desc
      font-size: 12px;
      color: #666666;
      line-height: 20px;