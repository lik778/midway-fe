.header
  padding: 20px 15px
  display: flex
  justify-content: space-between
  box-sizing: content-box
  &-logo
    width: 32px
    height: 21px
    background-size: cover
    margin-right: 20px
  &-name
    font-weight: bold
    color: #333
    width: 220px
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    font-size: 16px
  &-certificate
    height: 19px
    width: 19px
    background-size: cover
    position: relative
    margin-right: 47px
    &::after
      content: '已认证'
      position: absolute
      left: 100%
      margin-left: 5px
      font-size: 14px
      white-space: nowrap
      color: #666
