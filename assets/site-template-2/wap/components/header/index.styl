.header
  padding 0 15px
  display flex
  align-items center
  justify-content space-between
  box-sizing content-box
  position relative
  height 56px
  //line-height 56px
  &-logo
    width 40px
    height 40px
    background-size cover
    margin-right 20px
  &-name
    font-weight bold
    color #333
    width 220px
    font-size 16px
  &-certificate
    height 19px
    width 19px
    background-size cover
    position relative
    margin-right 47px
    &:after
      content '已认证'
      position absolute
      left 100%
      margin-left 5px
      font-size 14px
      white-space nowrap
      color #666

  .back-icon
    display inline-block
    width 11px
    height 11px
    border-top 2px solid #000
    border-right 2px solid #000
    transform rotate(-135deg)
    position absolute
    top calc(50% - 6px)
    left 26px
  .title
    width 180px
    margin 0 auto
    text-align center

