.product-recommend
    margin 10px 0
    background-color #fff
    .pro-title
        padding 20px 16px 14px
        height 18px
        line-height 18px
        border-bottom 1px solid #f2f2f2
        margin-bottom 14px
        h4
            border-left 3px solid #EC2525
            font-size 16px
            padding-left 5px
    .pro-box
        display flex
        flex-wrap nowrap
        overflow-x auto
        padding 0 16px
        box-sizing border-box
        &::-webkit-scrollbar
            display none
        a
            display block
            width 140px
            margin-right 20px
            box-sizing border-box
            img
                height 92px
                width 140px
            .pro-desc
                margin-top 10px
                font-size 14px
                color #666
                overflow hidden
                text-overflow ellipsis
                display -webkit-box
                -webkit-box-orient vertical
                -webkit-line-clamp 2
                word-break break-all
                margin-bottom 20px
