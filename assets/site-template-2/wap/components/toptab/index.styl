.tab-header
    width 100%
    background-color #ffffff
    font-size 16px
    font-weight 600
    position relative
    .sample
        display flex
        align-items center
        //实现横向滚动
        flex-flow nowrap
        overflow-x auto
        justify-content space-between
        margin 0 12px
        height 48px
        border-top 1px solid #f2f2f2
        margin-bottom 22px
        //去除滚动条
        &::-webkit-scrollbar
            display none
        a
            display inline-block
            list-style-type none
            margin-right 26px
            p
                font-size 12px
                color #666
                white-space nowrap
    img
        display inline-block
        width 48px
        height 47px
        position absolute
        right 0
        top 1

    .all
        display none
    .tab-active
        background-color #F7EEEE
        border-radius 25px
        padding 8px 10px
        p
            color #EC2525 !important



