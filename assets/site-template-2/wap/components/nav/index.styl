.nav
  display flex
  justify-content space-between
  padding 0 30px
  margin-bottom 10px
  font-size 16px
  background-color #fff
  border-top: 1px solid #F6F6F6
  &-item
    a
      display inline-block
      padding 15px 0
      color #333
      font-size 16px
      white-space nowrap
.nav-active
  color #EC2525
  border-bottom 2px solid #EC2525
  font-weight: bold