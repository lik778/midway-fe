.products 
	padding: 0 12px
	display: flex
	flex-wrap: wrap
	justify-content: space-between
	.product
		background-color: #fff
		display: flex
		flex-direction: column
		width: 48.5%
		margin-bottom: 12px
		&__img
			position: relative
			.hot-icon
				position: absolute
				bottom: 0
				left: 0
			img
				width: 100%
		&__desc
			color: #333
			padding: 15px
			font-size: 14px

