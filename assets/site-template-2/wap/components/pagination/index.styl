.pagination
    box-sizing border-box
    display flex
    text-align center
    color #999
    > a,
    > span
        flex-grow 1
        display block
        margin 5px 17px
        line-height 16px
        padding 12px 0
        text-decoration none
        position relative
    > span
        margin 5px 0
    .select-change-container
        position relative
        background-color #fff
        select
            position absolute
            width 100%
            opacity 0
            top 0
            left 0
            height 40px
            appearance none
            text-indent 45px
            cursor pointer
        .select-page-num
            display block
            color #333

            //三角符号
            &::after
                content ''
                position absolute
                top 50%
                right 4px
                margin-top -2px
                border 5px solid transparent
                border-top-color #e6e6e6

    .prev-page
        color #333
        background-color #fff

    .next-page
        color #333
        background-color #fff

    .disabled
        color #999
