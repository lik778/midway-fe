.products
  display flex
  flex-wrap wrap
  justify-content space-between
  .product-hot
    background-color #fff
    display flex
    flex-direction column
    width 48.5%
    margin-bottom 20px
    .product
      &__img
        width 100%
        height 113px
        margin-bottom 14px
        border-radius: 4px
      &__name
        margin-bottom 6px
        padding-bottom 10px
        font-size: 16px
        font-weight: bold
        color: #333333
        line-height: 18px
        border-bottom: 2px dotted #DDDDDD
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
      &__content
        height: 36px
        margin-bottom 14px
        line-height: 18px
        font-size: 14px
        color: #999999;
      &__btn
        display: flex
        justify-content: center
        align-items: center
        width: 80px;
        height: 26px;
        background: #ED4646;
        border-radius: 12px;
        text-align: center
        font-size: 14px;
        line-height: 26px
        font-weight: bold;
        color: #FFFFFF;
