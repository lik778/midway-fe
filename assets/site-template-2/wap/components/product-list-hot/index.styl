.products
  padding 0 12px
  display flex
  flex-wrap wrap
  justify-content space-between
  .product-hot
    background-color #fff
    display flex
    flex-direction column
    width 48.5%
    margin-bottom 20px
    .product
      &__img
        width 100%
        height 113px
        margin-bottom 14px
        border-radius: 4px
      &__name
        margin-bottom 6px
        padding-bottom 12px
        font-size: 14px;
        font-weight: bold;
        color: #333333;
        line-height: 14px;
        border-bottom: 2px dotted #DDDDDD
      &__content
        height: 36px
        margin-bottom 14px
        line-height: 18px
        font-size: 12px;
        color: #999999;
      &__btn
        display: flex
        justify-content: center
        align-items: center
        width: 80px;
        height: 26px;
        background: #ED4646;
        border-radius: 12px;
        text-align: center
        font-size: 14px;
        font-weight: bold;
        color: #FFFFFF;
