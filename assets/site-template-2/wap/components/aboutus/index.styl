.aboutus
  margin-bottom 10px
  padding: 0 12px
  background-color: #fff
  .aboutus-block-title
    padding: 0 6px
    line-height: 44px;
    font-size: 16px;
    font-weight: bold;
    color: #333333;
    border-bottom: 1px solid #EEEEEE
  .aboutus-block-content 
    margin-bottom 10px
    padding 20px 4px
    background-color #fff
    .aboutus-item
      display flex
      justify-content start
      align-items center
      position relative
      & +.aboutus-item
        margin-top 15px
      .aboutus-icon
        width 40px
        height 40px
        margin-right 12px
      .aboutus-text
        margin-right 20px
        font-size 14px
        color #666
        line-height 14px
        max-width 260px
        .aboutus-info
          font-weight: bold;
          color: #333333;
      .copy-data
        font-size 12px
        line-height 14px
        color #ED4646
      .more
        width 9px
        height 9px
        position absolute
        top 50%
        right 17px
        transform rotate(45deg) translateY(-80%)
        border-top 2px solid #999999
        border-right 2px solid #999999
  &-content-box
    margin-top 25px
  &-content
    font-size: 14px;
    color: #333333;
    line-height: 24px
    p.active
        display: block
  .click-to-expand
    border-radius: 16px
    height: 32px
    line-height: 32px
    border: 1px solid #DDDDDD
    color: #999
    font-size: 12px
    display: inline-block
    width: 122px
    text-align: center
    margin-top: 15px
    position: relative
    &::after
      content: ''
      width: 5px
      height: 5px
      border: 1px solid #999
      border-left: none
      border-bottom: none
      position: absolute
      right: 25px
      top: calc(50% + 2px)
      transform: translateY(-50%) rotate(-45deg)
    &.active
      &::after
        top: calc(50% - 2px)
        transform: translateY(-50%) rotate(135deg)
