.contact-form
  padding 20px 15px
  background-color #fff
  margin-top 10px
  .block-title
    margin 0
  .form-item
    &:first-of-type
      border-top 1px solid #e2e2e2
      margin-top 15px
    label
      font-size 14px
      color #333
      margin 15px 0 12px
      display inline-block
    .form-input
      input
      textarea
        width 100%
        border none
        background #F7F7F7
        border-radius 2px
        border-radius 2px
        padding 17px 10px
    button
      border none
      background-color #FF2D38
      text-align center
      color #fff
      width 100%
      height 44px
      line-height 44px
      margin-top 24px
      font-size 16px
    &.required
      label
        position relative
        &::after
          content '*'
          position absolute
          right -15px
          font-size 16px
          color red
