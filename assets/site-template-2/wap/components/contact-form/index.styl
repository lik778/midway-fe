.contact-form
  background-color #fff
  .block-title
    margin: 0 12px
    padding 12px 6px 
    border-bottom 1px solid #e2e2e2
    font-size: 16px;
    font-weight: bold;
    color: #333333;
  .contact-form-list
    padding 20px 15px 10px
    .form-item
      display: flex
      justify-content: flex-start
      align-items: flex-start
      margin-bottom  20px
      label
        font-size 14px
        line-height: 48px
        margin-right: 23px
        display inline-block
        color #333333
      .form-input
        flex 1
        input
        textarea
          width 100%
          border none
          border-radius 4px
          padding 14px 10px
          font-size: 14px;
          color: #999999;
          background-color: #F7F7F7
          -webkit-appearance: none;
      button
        width 100%
        height 50px
        margin-top 10px
        border none
        text-align center
        color #fff
        line-height 50px
        border-radius 25px
        font-size 16px
        background:rgb(237,70,70)
      &.required
        label
          position relative
          &::after
            content '*'
            position absolute
            right -15px
            font-size 16px
            color #FF4466
