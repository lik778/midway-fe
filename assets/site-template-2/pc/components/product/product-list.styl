
.product-list
	width 100%
	display flex
	flex-wrap wrap
	//justify-content space-between
	.item-p
		position relative
		//float left
		width 230px
		height 230px
		margin-bottom 20px
		margin-right 17px
		background-color #fff
		border 1px solid transparent
		&:nth-child(4n)
			margin-right 0
		&:hover
			border 1px solid #FF2D38
			p
				display none
			.show-desc
				display block
		img
			height 154px
			width 100%
		p
			font-size 14px
			color #333
			text-align justify
			margin 20px 15px
			line-height 14px
			overflow hidden
			text-overflow ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 2
		.show-desc
			display none
			//width 150px
			height 32px
			text-align center
			line-height 32px
			background-color #FF2D38
			color #fff
			margin 22px 56px







