@import "../../../../../common/pc/official-400-btn";
	
.company
	display flex
	&-left
		width 980px
		height 270px
		display flex
		justify-content space-between
		margin-bottom 20px
		>img
			height 270px
			width 406px
			flex-shrink 0
		.company-text
			width 574px
			padding 25px 36px 0
			margin-left 10px
			font-size 14px
			background-color #fff
			h3
				font-size 18px
			.company-address
				display flex
				color #666
				>span
					display inline-block
					&:first-child
						min-width 80px
			p
				color #666
				margin 20px 0
			img
				width 20px
				height 20px
				margin-right 8px
			.online-btn
				width 178px
				height 46px
				text-align center
				border 1px solid 
				border-radius 2px
				margin-right 20px
				display inline-flex
				align-items center
				justify-content center
				margin-top 36px
				font-size 16px
				border-color #FF2D38
				color #FF2D38
	&-right
		margin-left 15px
		width 224px

.company
	.video-con
		position relative
		height 270px
		width 406px
		flex-shrink 0
	.video-wrapper
		display flex
		justify-content center
		align-items center
		width 100%
		height 100%
		background-color black
		video
			flex 1
			max-width 100%
			max-height 100%
			cursor pointer
			z-index 9
	.video-cover
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 9
		cursor pointer
		img
			width 100%
			height 100%
			object-fit cover
	.video-cover::after
		content ''
		position absolute
		left calc(50% - 28px)
		top calc(50% - 28px)
		width 55px
		height 55px
		background url("data:image/png;base64,")
		background-size 100%
		cursor pointer