.detail-product
  .detail-table
    overflow hidden
    table
      width: 100%
      border-collapse: collapse
      overflow hidden
      tr
        display: flex
        .setting-key
          display: flex
          justify-content flex-start
          align-items center
          width: 25%
          padding: 12px 0 12px 16px
          font-size: 12px
          color: #333333
          font-weight: bold
          border-right: 1px solid #EEEEEE
          border-bottom: 1px solid #EEEEEE
        .setting-value
          display: flex
          justify-content flex-start
          align-items center
          width: 75%
          padding: 12px 0 12px 16px
          color: #999999
          font-size: 12px
          border-bottom: 1px solid #EEEEEE
    table
      border: 1px solid #EEEEEE
      border-bottom: 0