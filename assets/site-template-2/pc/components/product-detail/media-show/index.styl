@import 'swiper/dist/css/swiper.min.css'
.add-border
  border: 1px solid #ED4646
.media-show-container
  display: flex
  justify-content space-between
  height: 376px
  padding: 10px 0 20px 0
  margin-bottom 20px
  background-color: #FFFFFF
  .media-show-left
    width: 406px
    .left-headImg
      width: 100%
      height: 270px
      border-radius: 4px
      margin-bottom: 10px
      video
        width: 100%
        height: 270px
        source
          width: 100%
          height: 270px
      img
        width: 100%
        height: 100%
        border-radius: 4px
    .left-contentImg
      width: 100%
      height: 66px
      .swiper-container
        width: 100%
        height: 100%
        .swiper-slide
          width: 99px
          height: 66px
          margin-right: 10px
          border-radius: 4px
          display: -webkit-box;
          display: -ms-flexbox;
          display: -webkit-flex;
          display: flex;
          -webkit-box-pack: center;
          -ms-flex-pack: center;
          -webkit-justify-content: center;
          justify-content: center;
          -webkit-box-align: center;
          -ms-flex-align: center;
          -webkit-align-items: center;
          align-items: center;
          img 
            width: 100%
            height: 100%
            border-radius: 4px
          video
            width: 100%
            height: 66px
            source
              width: 100%
              height: 66px
      .gallery-thumbs
        .swiper-slide-thumb-active
          border: 1px solid #ED4646
  .media-show-middle
    width: 549px
    margin 15px 20px 0 20px
    .detail-title
      overflow: hidden
      text-overflow:ellipsis
      white-space: nowrap
      margin-bottom 24px
      color: #333333
      font-size: 18px
      font-weight: bold
    .detail-price
      box-sizing: border-box
      display: flex
      justify-content: flex-start
      align-items: center
      padding-left: 16px
      width: 100%
      height: 55px
      background: #FFF8F8
      border-top: 1px solid #F3B5B5
      color: #ED4646
      font-size: 14px
      font-weight: bold
      .prices
        margin-left: 24px
        font-size: 20px
        font-weight: 500px
    .detail-setting
      padding: 24px 0px 12px 16px
      margin-bottom: 28px
      color: #333333 
      font-size: 12px
      .setting-title
        font-size: 14px
        font-weight: bold
        margin-bottom 8px
        text-align: left
      .detail-product 
        ul
          display: flex
          flex-wrap: wrap
          li
            display: flex
            justify-content: flex-start
            width: 248px
            margin-bottom: 15px
            overflow hidden
            text-overflow ellipsis
            white-space: nowrap
            .setting-key
              margin-right 20px
              color: #999999
            .setting-value
              color: #333333
    .detail-contact
      display: flex
      justify-content flex-start
      align-items center
      .online-btn
        display: flex
        justify-content: center
        align-items: center
        width: 140px
        height: 40px
        border: 1px solid #ED4646
        font-size: 14px
        color: #ED4646
        border-radius: 4px
        img 
          width: 20px;
          height: 19px
          margin-right 8px
  .media-show-right
    width: 224px
    height: 258px
    margin-top: 62.5px
    background: blue
    border-radius: 4px
    border: 1px solid #EEEEEE
    background: #FFFEFB
    .company-record
      position relative
      width: 100%
      height: 36px
      img
        width: 100%
        height: 100%
      .company-dangan
        position absolute
        top: 8px
        right: 103px
        color: #F7E5A5
        font-size: 14px
        font-weight: 600
    .baixing-accord
      width: 100%
      height: 222px
      padding-top: 10px
      display: flex
      flex-direction: column
      justify-content center
      align-items center
      .accord-title
        display: flex
        justify-content: center
        align-items: center
        margin-bottom: 10px
        .accord-line
          width: 22px
          height: 1px
          background: #D4B87F
        .accord-content
          margin: 0 10px 
          color:#333333
          font-size: 12px
          font-weight: bold
      .accord-icon
        width: 100%
        margin-bottom 17px
        ul
          display: flex
          justify-content center
          li
            width: 18px
            height: 20px
            margin-right 24px
            &:last-child
              margin-right 0
      .accord-wd
        width: 180px
        border-top: 1px dashed #EADFC9
        margin-bottom: 20px
      .contact-name
        width: 180px
        font-size: 12px 
        color: #333333
        margin-bottom: 10px
        overflow: hidden
        text-overflow:ellipsis
        white-space: nowrap
      .contanct-address
        width: 180px
        font-size: 12px
        color: #333333
        overflow: hidden
        text-overflow:ellipsis
        white-space: nowrap
      .contant-btn
        width: 180px
        height: 30px
        margin: 20px 0
        line-height: 30px
        border: 1px solid #D4B87F
        border-radius: 4px
        color: #B17F19
        font-size: 12px
        text-align: center