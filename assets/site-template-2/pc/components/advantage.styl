
.advantage-subtitle
    font-size 16px
    color #333333
    margin 30px 30px
    font-weight bold
.advantage-table
	background-color: #FFFFFF
	padding: 55px 75px
	.advantage-item
		width: 1060px
		display: flex
		flex-wrap: wrap
		margin-bottom: 60px
		.number
			color: #FA774F
			font-size: 60px
			font-weight: 100;
			padding-right: 30px
			position: relative
			top: -15px
			min-width 70px
		.title
			font-size: 22px
			font-weight: bold
		.advan-line
			width: 30px
			height: 3px
			background-color: #D8D8D8
			margin-top: 15px
		.desc
			margin: 0
			padding-top: 25px
			color: #666666
			font-size: 16px

	.advantage-item:last-child
		margin-bottom: 0