.footer
  background: #2B2B2B

  &-container
    max-width: 1200px
    margin: auto
    padding: 45px 0
    display: flex
    justify-content: space-between
    border-bottom: 1px solid #444
    &.copyright
      flex-direction: column
  
  &-title
    color: #fff
    font-size: 22px

  &-links
    a
      font-size: 16px
      color: #999999
      margin-left: 60px

  &-info
    margin: 5px 0
    display: flex
    justify-content: center

    > div
      font-size: 12px
      color: #666666
      margin: 0 10px