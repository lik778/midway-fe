@charset "utf-8"
body
	margin 0
	padding 0
	font-family "'PingFangSC-Regular','Microsoft YaHei', 'Heiti SC', tahoma, arial, 'Hiragino Sans GB', \\5B8B\4F53, sans-serif"
	color #333
	background-color #f7f7f7

a
	text-decoration none
	cursor pointer

a:hover
	color #FF2D38 !important

//解决浮动问题
.clearfix:after
	content ""
	display block
	height 0
	clear both
	visibility hidden
//解决IE6,7不识别伪元素
.clearfix
	zoom  1

img
	border 0

ul,li,dl,dt,dd
	list-style none
	margin 0
	padding 0

input,select,checkbox
	vertical-align middle

h1,h2,h3,h4,h5,h6
	padding 0
	margin 0

.none
	display none

