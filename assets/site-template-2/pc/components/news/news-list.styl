.news-list
  background-color: #fff
  width: 980px
  box-shadow: 0 4px 10px rgba(#000, 0.02);

  .news
    &-item
      padding: 30px 30px 0
      &__inner
        display: flex
        position: relative
        font-size: 14px
      &:not(:last-child)
        .news-item__inner
          border-bottom: 2px dashed #EAEAEA
    &-date
      padding: 0 30px 30px 0
      &__day
        font-size: 24px
        color: #666666
    &-content
      padding: 0 0 30px 30px
      box-sizing: border-box
      flex: 1
      &__title
        font-weight: bold
      &__desc
        margin-top: 12px
        color: #666666
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
        width: 800px
      &__cta
        padding-top: 30px
        .cta-btn
          display: inline-block
          border: 1px solid #CCCCCC
          color: #CCCCCC
          height: 30px
          padding: 0 25px
          line-height: 30px
          font-size: 12px
          cursor: pointer
          position: relative

          &::after
          &::before
            content: ''
            width: 30px
            height: 1px
            position: absolute
            right: -15px
            top: calc(50% - 1px)
            z-index: 9
            background-color: #CCCCCC
          &::before
            height: 6px
            width: 6px
            background-color: transparent
            border: 1px solid #ccc
            border-left: none
            border-bottom: none
            transform: rotate(45deg)
            top: calc(50% - 4px)

          &:hover
            border: 1px solid #ff2d38
            color: #ff2d38
            &::after
              background-color: #ff2d38
            &::before
              border-color: #ff2d38
