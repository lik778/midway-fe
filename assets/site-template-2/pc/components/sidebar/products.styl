.sidebar
  #product-swiper
    padding-bottom: 30px
    position: relative
    .swiper-wrapper
      height: auto
    .swiper-pagination
      position: absolute
      left: 50%
      bottom: 10px
      transform: translateX(-50%)
      .swiper-pagination-bullet
        width: 16px
        height: 3px
        border-radius: 0
        margin: 0 5px
        &-active
          background: #FF2D38
  .side-products
    a.side-product
      display: block
      img
        width: 194px
        height: 128px
      .product-desc
        font-size: 12px
        padding: 15px 13px
        background: #F7F7F7
        color: #666

