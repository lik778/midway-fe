.news-detail
    max-width: 960px
    margin-bottom: 30px
    .news
        &-content
            background-color: #fff
            padding: 0 30px
            box-sizing: border-box

            &__text
                color: #333333
                line-height: 28px
                font-size: 16px
                padding: 30px 0
            &__tags
                margin-top: 30px
                span
                    background: #F2F2F2
                    margin-right: 20px
                    font-size: 14px
                    color: #666666
                    padding: 0 15px
                    height: 32px
                    line-height: 32px
                    display: inline-block
        &-title
            padding: 30px 0
            text-align: center
            border-bottom: 2px dashed #EAEAEA
            &__text
                font-size: 32px
                margin-bottom: 15px
            &__date
                color: #333

        &-nav
            margin-top: 10px
            background-color: #fff
            display: flex
            justify-content: space-between
            padding: 27px 30px

            &__pre,
            &__next
                display: flex
                flex: 1
                span
                    color: #EC2525
                    margin-right: 5px
                a
                    color: #666666

    &__subtitle
        font-size: 16px
        color: #333333
        margin: 30px 30px
        font-weight: bold

    &__contact-us
        background-color: #fff
        padding: 30px
        display: flex

        .contact-form
            width: 530px
            .form-item
                font-size: 14px
                input,
                textarea
                    font-size: 14px
                textarea
                    min-height: 90px

                &__label
                    font-weight: normal

        .company
            &-info
                padding: 15px 15px 0 70px
                font-size: 14px
                color: #333333
        .info-item
            margin: 20px 0
            display: flex;
            span:first-child
                color: #999999
                margin-right: 15px
                min-width: 70px
                display: inline-block
.contact-us__form
    .form-group
      display: flex;
      padding: 15px 0;

      &:last-child
        padding-bottom: 0;

      .form-item
        flex: 1;

        &:not(&:last-child)
          margin-right: 30px;

        &__label
          margin-bottom: 8px;
          color: #333333;
          font-weight: bold;
          position: relative;
          display: inline-block;

          &.required
            &::after
              content: '*';
              position: absolute;
              color: red;
              right: -10px;
              top: 0;

        input,
        textarea
          background: #F7F7F7;
          border: none;
          font-size: 16px;
          color: #999999;
          width: 100%;
          padding: 15px;
        textarea
          resize: vertical;
          min-height: 200px;

        button
          background: #FF2D38;
          font-size: 16px;
          color: #FFFFFF;
          border: none;
          padding: 10px 50px;
          cursor: pointer;
