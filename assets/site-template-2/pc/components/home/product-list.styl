.item-p
	position relative
	float left
	width 288px
	height 385px
	margin 0 20px 20px 0
	background-color #fff
	border 1px solid transparent
	&:nth-child(4n)
		margin-right 0
	&:hover
		border 1px solid #FF2D38
		p
			display none
		.show-desc
			display block
	img
		height 288px
		width 288px
	.hot-icon
		height 36px
		width 100%
		position absolute
		top 261px
		left 0
	p
		font-size 16px
		color #333
		text-align justify
		margin 26px 19px
		line-height 25px

	.show-desc
		display none
		width 150px
		height 40px
		text-align center
		line-height 40px
		background-color #FF2D38
		color #fff
		margin 28px 70px







