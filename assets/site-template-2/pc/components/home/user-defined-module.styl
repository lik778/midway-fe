.user-defined-list
  width 1220px
  margin 0 auto
  *
    box-sizing: border-box
  .user-defined-item
    display: flex
    justify-content: center
    align-items: center
    margin-bottom 20px
    width 1190px
    .user-defined-item-img
      width: 595px
      height: 222px
    .user-defined-item-content
      width: 595px
      height: 222px
      padding: 48px 77px 48px 77px
      position relative
      background-color: #fff
      .triangle 
        position: absolute;
        top: 50%;
        transform: translateY( -50%);
        border: 10px solid transparent;
        &.left
          right: -15px
          border-left: 15px solid  #fff;
          border-right: 0;
        &.right
          left: -15px
          border-left: 0;
          border-right: 15px solid  #fff;
      .title
        margin-bottom 16px
        font-size: 20px;
        font-weight: bold;
        color: #333333;
      .line
        width: 30px
        height: 4px
        margin-bottom 24px
        background: #D8D8D8;
      .desc
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 2
        word-break break-all
        font-size: 14px;
        color: #666666;
        line-height 26px
        letter-spacing .5px
