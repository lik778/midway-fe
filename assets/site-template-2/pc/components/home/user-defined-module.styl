.user-defined-list
	display flex
	flex-wrap wrap
	justify-content space-between
	width 1220px
	margin 0 auto
	.viewMore
		display flex
		align-items center
		justify-content center
	.user-defined-item
		width 595px
		margin 0 30px 30px 0
		padding 50px
		display flex
		background #fff
		box-sizing border-box
		&:nth-child(2n)
			margin-right 0
		&:last-child
			margin-bottom 20
		&:nth-last-child(2)
			margin-bottom 20
		.number
			color #E2242E
			min-width 70px
			font-size 60px
			font-weight 100
			padding-right 25px
			transform translateY(-10px)
		.title
			font-size 28px
			font-weight bold
		.user-defined-line
			width 35px
			height 4px
			background-color #D8D8D8
			margin 14px 0 30px  
		.content
			width 375px
			color #666666
			font-size 14px
		a
			display inline-block
			color #333
			width 240px
			height 45px
			line-height 45px
			border 1px solid #ccc
			text-align center
			&:hover
				span
					color #333
