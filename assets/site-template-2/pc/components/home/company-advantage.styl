.company-advantages
	display flex
	flex-wrap wrap
	justify-content space-between
	width 1220px
	.company-advantage
		width 595px
		margin 0 30px 30px 0
		padding 50px
		display flex
		position relative
		background-color #fff
		box-sizing border-box
		&:nth-child(2n)
			margin-right 0
		img
			position absolute
			top 0
			left 0
			background-size cover
			z-index -1
			width 100%
			height 100%
			border 0
		.number
			color #E2242E
			min-width 70px
			font-size 60px
			font-weight 100;
			padding-right 25px
			position relative
			top -15px
		.title
			font-size 28px
			font-weight bold
		.advan-line
			width 35px
			height 4px
			background-color #D8D8D8
			margin-top 15px
		.desc
			width 375px
			margin 0
			padding-top 25px
			color #666666
			font-size 15px
		a
			display inline-block
			color #333
			width 240px
			height 45px
			line-height 45px
			border 1px solid #ccc
			text-align center
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			&:hover
				color #333 !important
