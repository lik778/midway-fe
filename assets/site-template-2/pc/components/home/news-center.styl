.new-center
	width 1190px
	.news-box
		box-sizing border-box
		float left
		width 586px
		padding 8.7px 30px 0
		margin-right 16px
		background-color #fff
		border-radius 4px
		&:nth-child(2n)
			margin-right 0
		>.title
			display flex
			align-items center
			height 60px
			border-bottom 1px solid #eaeaea
			.line
				width 3px
				height 19px
				background-color #FF2D38
			h3
				flex 1
				font-size 20px
				color #000
				padding-left 10px
			img
				width 22px
				height 22px
		>.content
			a
				display block
				font-size 14px
				display flex
				align-items center
				padding 28px 0
				border-bottom 1px dashed #eaeaea
				&:last-child
					border-bottom none
				&:hover
					.item-title
						color #FF2D38
				.left-img
					width 85px
					height 85px
					background-color #F2F2F2
					margin-right 15px
					display flex
					align-items center
					justify-content center
					flex-direction column
					.news-date__day
						width 29px
						height 44px
						font-size 24px
						color #666
					.news-date__year
						font-size 14px
						margin-top -15px
						color #666
				.item-card
					width 418px
					.item-title
						font-weight 600
						margin-bottom 10px
						color #333333
						font-size 14px
					.item-content
						color #666666
						line-height 24px
						letter-spacing 1px




