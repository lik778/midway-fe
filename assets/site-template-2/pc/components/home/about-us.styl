.about-us-bgc
	width 100%
	background url(//file.baixing.net/202102/ec557990b409c68993519a3b570d3000.png) no-repeat center
	background-size cover
	position relative
	height 379px
	.about-us-text
		width 1113px
		position absolute
		top 52px
		left 44px
		.top
			height 38px
			line-height 38px
			margin-bottom 31px
			>img
				float left
				height 24px
				margin-right 10px
				margin-top 9px
				vertical-align middle
			>h3
				float left
				font-size 26px
		.center
			position relative
			//border 1px solid red
			width 100%
			p
				display inline-block
				font-size 16px
				font-weight 600
				margin-right 18px
			span
				color #999
				width 430px
			.center-left
				width 534px
				float left
				.intro
					margin-top 20px
					padding-right 6px
					font-size 14px
					color #666
					line-height 26px
					//显示4行
					overflow hidden
					text-overflow ellipsis
					display -webkit-box
					-webkit-box-orient vertical
					-webkit-line-clamp 4
					word-break break-all
			.center-right
				float left
				margin-left 76px
		.view-all-btn
			width 125px
			height 40px
			line-height 40px
			border 1px solid #ccc
			text-align center
			margin-top 32px






