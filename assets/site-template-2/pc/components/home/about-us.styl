.about-us-bgc
	width 100%
	background url(//file.baixing.net/202102/ec557990b409c68993519a3b570d3000.png) no-repeat center
	background-size cover
	position relative
	height 379px
	.about-us-text
		width 1113px
		position absolute
		top 52px
		left 44px
		.top
			height 38px
			line-height 38px
			margin-bottom 31px
			>img
				float left
				height 24px
				margin-right 10px
				margin-top 9px
				vertical-align middle
			>h3
				float left
				font-size 26px
		.center
			position relative
			width 100%
			p
				display inline-block
				font-size 16px
				font-weight 600
				margin-right 18px
			span
				color #999
				width 430px
			.center-left
				width 534px
				float left
				.intro
					margin-top 20px
					padding-right 6px
					font-size 14px
					color #666
					line-height 26px
					//显示4行
					overflow hidden
					text-overflow ellipsis
					display -webkit-box
					-webkit-box-orient vertical
					-webkit-line-clamp 4
					word-break break-all
			.center-right
				float left
				margin-left 76px
				.certification-icon
					display flex
					align-items center
					margin-top 20px
					font-size 12px
					.img1
						height 19px
						margin-right 4px
					.tag1
						color #ff5508
						margin-right 20px
					.img2
						width 18px
						height 18px
						margin-right 4px
					.tag2
						color #038CFF
				dl
					font-size 12px
					line-height 20px

					display flex
					align-items flex-start
					margin 20px 0
					dt
						margin-right 15px
						color #999
					dd
						max-width 400px
						color #666

	>a
		width 125px
		height 40px
		line-height 40px
		border 1px solid #ccc
		text-align center
		position absolute
		bottom 50px
		left 46px
		color #333
		&:hover
			border-color #ff5508







