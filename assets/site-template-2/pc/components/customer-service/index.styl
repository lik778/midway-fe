.customer-box
	background-color #fff
	border 1px solid #EF6A31
	z-index 3
	border-radius 4px
	position fixed
	bottom 130px
	right 5px
	.qq-title >img
		cursor pointer
		position absolute
		right 17px
		top 6px
		width 9px
		height 14px
	dl
		margin-top 8px
		padding 0 4px
		width 142px
		>dt
			float left
			width 70px
			margin-bottom 15px
			font-size 14px
			overflow hidden
			white-space nowrap
			text-overflow ellipsis
			div
				float right
		>dd
			float left
			margin-bottom 15px
			font-size 14px
			width 70px
			a
				display inline-block
				height 20px
				line-height 20px
				img
					display inline-block
					width 66px
					height 20px
	.center
		height 39px
		line-height 39px
		display flex
		align-items center
		padding 0 6px
		img
			float left
			width 15px
			height 16px
			margin-right 5px
		span
			display block
			float left
			font-size 16px
			color #333
	.footer
		height 39px
		max-width 178px
		line-height 39px
		display flex
		align-items center
		padding 0 6px
		cursor pointer
		img
			float left
			width 18px
			height 13px
			margin-right 5px
		span
			display block
			float left
			font-size 14px
			color #666
			overflow hidden
			white-space nowrap
			text-overflow ellipsis


	.qq-title,.customer-tel,.weixin
		height 27px
		line-height 27px
		background #EF6A31
		font-size 14px
		color #fff
		text-align center
		min-width 129px

.customer-hide
	display none
	position fixed
	bottom 220px
	right 5px
	z-index 2
	background #EF6A31
	border-radius 2px
	width 36px
	height 141px
	text-align center
	cursor pointer
	>img
		width 17px
		height 17px
		margin 10px 0 -7px
	p
		font-size 16px
		color #fff
		padding 5px

