.header-bgc
    background-color #fff
    .header
        width 1220px
        margin 0 auto
        height 80px
        display flex
        align-items center
        justify-content space-between
        .nav-left
            display flex
            align-items center
            justify-content flex-start
            a.logo
                display flex
                align-items center
                >img
                    height 50px
                    margin-right 10px
                >h3
                    font-size 20px
                    color #333
                    white-space:nowrap;
            .nav-item
                display flex
                position relative
                margin-left 34px
                //hover后展示下拉列表
                &:hover
                    .nav-dropdown
                        display flex
                .text
                    font-size 16px                
                .down-arrow
                    display inline-block
                    margin 0 2px 6px 9px
                    width 6px
                    height 6px
                    border-top 2px solid #666
                    border-right 2px solid #666
                    transform translateY(4px) rotate(135deg)
                .nav-dropdown
                    display none
                    position absolute
                    left 0
                    background-color #fff
                    top calc(100%)
                    z-index 9999
                    line-height 1
                    flex-direction column
                    box-shadow 0 4px 10px rgba(#000, 0.2);
                    width 170px
                    &::after
                        content ''
                        width 15px
                        height 15px
                        background-color #fff
                        position absolute
                        top -5px
                        left 15%
                        transform rotate(45deg)
                        box-shadow 0 4px 10px rgba(#000, 0.2)
                        z-index -1
                    >a
                        display block
                        box-sizing border-box
                        padding 14px 20px
                        color #333
                        line-height 16px
                        background #fff
                        width 100%
                        &.nav-active
                            color #f46
                        &:hover
                            background #F7F7F7
        .nav-right
            display flex
            justify-content: flex-end
            align-items center
            .phone-icon
                width: 35px
                height: 35px
                margin-right 5px
            .phone-num
                font-size: 20px
                color #f46