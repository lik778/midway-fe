div,p
	margin 0
	padding 0
	font-family 'PingFangSC-Regular','Microsoft YaHei', 'Heiti SC', tahoma, arial, 'Hiragino Sans GB', '\5b8b\4f53', sans-serif
	color #333
body
	background-color #f7f7f7
	margin 0
	padding 0
	min-width 1420px
a
	text-decoration none
	cursor pointer

a:hover
	color #FF2D38 !important

//解决浮动问题
.clearfix::before,
.clearfix::after
	content ""
	display table

.clearfix::after
	clear both
//解决IE6,7不识别伪元素
.clearfix
	zoom  1

img
	border 0

ul,li,dl,dt,dd
	list-style none
	margin 0
	padding 0

input,select,checkbox
	vertical-align middle

h1,h2,h3,h4,h5,h6
	padding 0
	margin 0

.none
	display none

//单行超出点点隐藏
.only-oneline
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
.only-twoline
	overflow hidden
	text-overflow ellipsis
	display -webkit-box
	-webkit-box-orient vertical
	-webkit-line-clamp 2
	word-break break-all
