.company-pic
	position relative
	width 985px
	height 302px
	img
		width 100%
		height 100%
	.company-title
		position absolute
		left 33px
		top 19px
		p
			&:first-child
				font-size 24px
				letter-spacing 0
				line-height 24px
				font-weight 500
			&:last-child
				font-size 14px
				letter-spacing 0
				line-height 14px

	.company-profile
		width 730px
		height 208px
		position absolute
		left 214.6px
		top 47px
		font-size 16px
		line-height 26px
		color #333333
		letter-spacing 0

		//展示8行，多余隐藏
		overflow hidden
		text-overflow ellipsis
		display -webkit-box

		-webkit-line-clamp 8
		//下面这句是加空格的，如果不生效，则放入内联style里面
		-webkit-box-orient vertical

