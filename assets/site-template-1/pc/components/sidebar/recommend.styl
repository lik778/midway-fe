.recommend
	width 222px
	min-height 60px
	border 1px solid #ddd
	border-top none
	padding-top 1px
	margin-bottom 17px
	ul
		li
			a
				display flex
				align-items center
				height 48px
				margin 16px 10px
				img
					float left
					width 48px
					height 48px
					margin-right 8px
				.rec-text
					float left
					width 145px
					font-size 14px
					margin-top 8px
					overflow hidden
					text-overflow ellipsis
					display -webkit-box
					-webkit-box-orient vertical
					-webkit-line-clamp 2
					&:hover
						color #1565C1




