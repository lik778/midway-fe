.news-detail
    width 984px
    min-height 460px
    border 1px solid #E5E5E5
    padding 24px 27px 27px 23px
    box-sizing border-box
    .news-detail-title
        h3
            text-align center
    .news-detail-time
        text-align center
        font-size 14px
        color #333
    .news-detail-pic
        text-align center
        margin 40px auto
        img
            max-width 100%
    .news-detail-content
        font-size 16px
        line-height 28px
        color #333



