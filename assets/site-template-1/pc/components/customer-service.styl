.customer-box
	background-color #fff
	border 1px solid #EF6A31
	z-index 2
	border-radius 4px
	position fixed
	bottom 60px
	right 5px
	dl
		margin-top 8px
		padding 0 4px
		width 142px
		>dt
			float left
			width 70px
			margin-bottom 15px
			font-size 14px
			overflow hidden
			white-space nowrap
			text-overflow ellipsis
		>dd
			float left
			margin-bottom 15px
			font-size 14px
			width 70px
			a
				display inline-block
				height 20px
				line-height 20px
				img
					display inline-block
					width 58px
					height 18px
	.center
		height 39px
		line-height 39px
		display flex
		align-items center
		padding 0 6px
		img
			float left
			width 15px
			height 16px
			margin-right 5px
		span
			display block
			float left
			font-size 16px
			color #333
	.footer
		height 39px
		line-height 39px
		display flex
		align-items center
		padding 0 6px
		img
			float left
			width 18px
			height 13px
			margin-right 5px
		span
			display block
			float left
			font-size 14px
			color #666

	.qq-title,.customer-tel,.weixin
		height 27px
		line-height 27px
		background #EF6A31
		font-size 14px
		color #fff
		text-align center