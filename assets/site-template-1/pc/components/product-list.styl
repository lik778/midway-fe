.product-list > .item
    position relative
    float left
    width 234px
    height 287px
    border 1px solid #E5E5E5
    margin 20px 16px 0 0
    padding 24px 27px 27px 23px
    box-sizing border-box
    &:nth-child(4n)
        margin-right 0
    .cover
        img
            width 180px
            height 120px
        //background-image url("//file.baixing.net/202011/810feadae5a9849e4a067e79fc55ef56.png")
        //background-size cover
    p
        font-size 16px
        color #333
        margin 16px 0 21px
        text-align center
        //展示2行，多余隐藏
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical

    .btn
        display block
        width 164px
        height 39px
        line-height 39px
        //button居中显示
        position absolute
        bottom 24px
        left 50%
        margin-left -85px
        text-align center
        font-size 16px
        color #1565C1
        border 1px solid #1565C1
        border-radius 2px
.product-more-btn
    display block
    margin 40px auto
    width 200px
    font-size 16px
    color #fff
    background-color #1565c1
    border-radius 2px
    padding 9px 0
    text-align center
    &:hover
        color #fff !important
        background #004EA8
