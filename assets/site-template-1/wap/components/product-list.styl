.product-list
	max-height 680px
	border-top 17px solid #F5F5F5
	ul
		margin 18px 20px 18px 18px
		li
			margin-bottom 30px
			list-style none
			a
				display flex
				align-items center
				height 48px
				text-decoration none
				color #333
				img
					width 60px
					height 40px
					margin-right 16px
				.rec-text
					font-size 14px
					margin-top 8px
					overflow hidden
					text-overflow ellipsis
					display -webkit-box
					-webkit-box-orient vertical
					-webkit-line-clamp 2
					&:hover
						color #1565C1




