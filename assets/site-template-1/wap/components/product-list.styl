.product-list
	margin 18px 20px 18px 18px
	max-height 680px
	ul
		flex-wrap wrap
		li
			margin-bottom 30px
			a
				display flex
				align-items center
				height 48px
				img
					width 60px
					height 40px
					margin-right 16px
				.rec-text
					font-size 14px
					margin-top 8px
					overflow hidden
					text-overflow ellipsis
					display -webkit-box
					-webkit-box-orient vertical
					-webkit-line-clamp 2
					&:hover
						color #1565C1




