footer
  border-top 24px solid #F5F5F5
  bottom 0
  width 100%
  height 252px
  background #282A37
  .footer-link
    padding 18px 0 25px 0
    a
      width 33%
      display inline-block
      text-align center
      font-size 14px
      color #fff
      text-decoration none
      border-right 1px solid #fff
      padding 0 8px
      box-sizing border-box
      &:last-child
        border-right none
  .footer-content
    font-size 12px
    color #999
    letter-spacing 0
    text-align center
    line-height 15px
    padding 10px 15px
