.pagination
    box-sizing border-box
    display flex
    text-align center
    color $cm-color-fg-light
    margin-bottom 7px
    background $cm-color-bg
    > a,
    > span
        flex-grow 1
        display block // QQ浏览器display不是block的flex会挂
        margin 5px
        line-height 16px
        padding 12px 0
        text-decoration none
        position relative
    .select-change-container
        position relative
        select
            position absolute
            width 100%
            opacity 0
            top 0
            left 0
            height 40px
            appearance none
            text-indent 45px
            cursor pointer
        .select-page-num
            display block
            &::after
                content ''
                position absolute
                top 50%
                right 10px
                margin-top -2px
                border 5px solid transparent
                border-top-color $cm-color-splitter

    .prev-page
        color $cm-color-primary
        &::after
            position absolute
            right 0
            content ""
            height 14px
            line-height 14px
            border-right 1px solid $cm-color-splitter

    .next-page
        color $cm-color-primary
        &::before
            position absolute
            left  0
            content ""
            height 14px
            line-height 14px
            border-right 1px solid $cm-color-splitter

    .disabled
        color $cm-color-fg-light

    .next
        display block
        text-align center

    .loading
        display block
        text-align center
        background none
        border none

    .loading-icon
        position relative
        top 2px
        right 5px
        display inline-block
        padding 0
        margin 0
        width 16px
        height 16px
        background url(//s.baixing.net/img/style/loading.gif) center center no-repeat
        background-size 16px 16px
