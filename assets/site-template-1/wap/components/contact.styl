.contact-box
  position fixed
  bottom 0
  width 100%
  height 52px
  background #fff
  .sms-box, .wechat-box
    float left
    width 25%
    height 52px
    line-height 52px
    text-align center
    position relative
    .line
      position absolute
      top 0
      right 0
      width 1px
      height 52px
      background  #ccc
    span
      font-size 12px
      color #EF6A31
    .icon
      height 12px
      margin-right 5px
  .phone-box
    float right
    background #EF6A31
    color #fff
    width 50%
    padding 10px 20px
    box-sizing border-box
    .tel-icon
      float left
      height 25px
    .info
      float left
      font-size 12px
      margin-left 10px
      position relative
      top -5px
      p:last-child
        font-size 16px
