.tab-header
    width 100%
    background-color #ffffff
    font-size 16px
    font-weight 600
    padding 32px 29px 0
    color #333
    ul
        display flex
        flex-wrap wrap
        li
            display inline-block
            list-style-type none
            margin-bottom 32px
            margin-right 24px
            a
                font-size 16px
                color #333333
                text-decoration none
                &:focus
                    //border-bottom 2px solid #1565C1
                    color #1565C1
    .tab-hidden
        overflow hidden
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
    .more-about
        height 44px
        line-height 44px
        display block
        font-size 12px
        color #999
        text-align center
        border-top 1px solid #E5E5E5

        img
            width 12px
            height 12px
            margin-left 10px
            vertical-align middle
            margin-bottom 2px

        .img-rotate
            transform rotate(180deg)
    .change-more-about
        color #1565C1 !important



