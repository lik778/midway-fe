.tab-header
    width 100%
    background-color #ffffff
    font-size 16px
    font-weight 600
    color #333
    ul
        display flex
        flex-wrap wrap
        margin 0 19px
        padding-top 32px
        li
            display inline-block
            list-style-type none
            margin-bottom 32px
            margin-right 24px
            a
                font-size 16px
                text-decoration none
                color #333
    .tab-hidden
        overflow hidden
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical

    .s-open,
    .s-off
        margin-top 10px
        height 44px
        line-height 44px
        font-size 12px
        color #999
        text-align center
        border-top 1px solid #E5E5E5
        img
            width 12px
            height 12px
            margin-left 10px
            vertical-align middle
            margin-bottom 2px
    .s-off
        display none
        color #1565C1

    .active
        color #1565C1 !important



