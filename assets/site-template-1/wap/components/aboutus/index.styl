.aboutus
    width 100%
    margin-top 16px
    background-color #fff
    .aboutus-title
        padding 16px
        height 18px
        line-height 18px
        h4
            padding-left 5px
            border-left 3px solid#1565C1
            color #333
            font-size 16px
    .aboutus-content
        padding-bottom 4px
        p
            color #333
            font-size 14px
            margin 0 21px 17px 18px
            word-break break-all
            //此处把隐藏属性独立出来成一个类，供jquery点击增删
        .about-hidden
            overflow hidden
            display -webkit-box
            -webkit-line-clamp 3
            -webkit-box-orient vertical
            word-break break-all
    .s-open,
    .s-off
        height 44px
        line-height 44px
        display block
        font-size 12px
        color #999
        text-align center
        border-top 1px solid #DDD
        img
            width 12px
            height 12px
            margin-left 10px
            vertical-align middle
            margin-bottom 2px
    .s-off
        display none
        color #1565C1
