.product
    width 100%
    background-color #ffffff
    .product-title
        padding 16px 13px 8px 16px
        margin-top 16px
        display flex
        align-items center
        justify-content space-between
        p 
            padding-left 10px
            font-size 16px
            color #333333
            border-left 3px solid#1565C1  
        .morebtn
            font-size 16px
            color #666666
    .product-list
        display flex
        flex-wrap wrap
        justify-content space-between
        margin 8px 16px 16px 16px
        .item
            width 164px
            height 243px
            border 1px solid #E5E5E5
            padding 7px
            box-sizing border-box
            margin-bottom 16px
            &:nth-child(2n)
                margin-right 0
            .cover
                img
                    width 150px
                    height 120px
            p
                font-size 16px
                color #333
                margin 16px 0 16px
                text-align center
                //展示2行，多余隐藏
                overflow hidden
                text-overflow ellipsis
                display -webkit-box
                -webkit-line-clamp 2
                -webkit-box-orient vertical
            .btn
                display block
                margin 0 auto
                line-height 27px
                width 115px
                height 27px
                //button居中显示
                text-align center
                font-size 12px
                color #1565C1
                border 1px solid #1565C1
                border-radius 2px
            

