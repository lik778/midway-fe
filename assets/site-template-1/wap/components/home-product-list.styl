.product
    width 100%
    background-color #ffffff
    padding-bottom 16px
    .product-title
        padding 16px
        padding-bottom 0
        margin-top 16px
        p
            float left
            padding-left 10px
            font-size 16px
            font-weight 600
            color #333
            border-left 3px solid#1565C1
        a
            float right
            color #666
            .right-icon
                display inline-block
                margin 0 2px 2px 5px
                width 8px
                height 8px
                border-top 1px solid #666
                border-right 1px solid #666
                transform rotate(45deg)
    .product-list
        display flex
        flex-wrap wrap
        margin 0 15px
        .item
            position relative
            text-align center
            width 47%
            //height 243px
            border 1px solid #E5E5E5
            padding 7px
            box-sizing border-box
            margin 16px 16px 0 0
            &:nth-child(2n)
                margin-right 0
            img
                width 97%
                height 120px
            p
                font-size 16px
                color #333
                margin 16px 0 46px
                text-align center
                //展示2行，多余隐藏
                overflow hidden
                text-overflow ellipsis
                display -webkit-box
                -webkit-line-clamp 2
                -webkit-box-orient vertical
            .btn
                display block
                margin 0 auto
                line-height 27px
                width 70%
                height 27px
                //button居中显示
                position absolute
                bottom 16px
                left 50%
                margin-left -35%
                text-align center
                font-size 12px
                color #1565C1
                border 1px solid #1565C1
                border-radius 2px


