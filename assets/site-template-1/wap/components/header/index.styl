header
  background #1565C1
  height 45px
  position relative
  .back-icon
    display inline-block
    width 11px
    height 11px
    border-top 2px solid #fff
    border-right 2px solid #fff
    transform rotate(-135deg)
    position absolute
    top 15px
    left 15px
  .company-name
    width 180px
    font-size 16px
    color #fff
    text-align center
    line-height 45px
    margin 0 auto
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
  .header-nav
    position absolute
    right 16px
    top 15px
    .select-icon
      height 17px
    .nav-menus
      display none
      position absolute
      right -5px
      top 25px
      width 112px
      background #fff
      box-shadow 0 0 4px 2px rgba(0,0,0,0.21)
      border-radius 4px
      z-index 9
      &:before
        content ''
        border-width 0 6px 6px
        width 0
        height 0
        border-style solid
        border-color transparent transparent #fff
        position absolute
        left 90px
        top -5px
      a
        font-size 16px
        color #333
        display block
        text-decoration none
        text-align center
        padding 14px 0
        //名字过长截断
        max-width 112px
        overflow hidden
        text-overflow ellipsis
        white-space  nowrap
