.news-list
    width 100%
    line-height 44px
    border-top 17px solid #F5F5F5
    ul
        margin 0 20px 20px
        min-height calc(100% - 470px)
        li
            list-style none
            border-bottom 1px dashed
            a
                text-decoration none
                p
                    letter-spacing 0
                    color #333
                    font-size 16px
                    overflow hidden
                    white-space nowrap
                    text-overflow ellipsis




