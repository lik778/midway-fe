.introduction
    width 100%
    background-color #ffffff
    margin-top 16px

    .introduction-bg
        display flex
        align-items center
        .left-info
            width 68%
            border-right 1px solid #DDDDDD
            margin 23px 0 22px 27px
            padding-right 10px
            .name
                font-size 16px
                font-weight 600
                color #333333 16px
            .address
                margin-top 10px
                font-size 14px
                color #666666
            .telephone
                font-size 14px
                color #666666
                >span
                    font-size 16px
                    color #D04E35
        a
            display block
            margin auto
            >img
                width 43px
                height 43px


